<Window x:Class="CivitasERP.AdminViews.prueba"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CivitasERP.AdminViews"
        mc:Ignorable="d"
        Title="prueba" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Cargar Administradores" Width="200" Click="CargarAdmins_Click"/>
            <Button Content="CargarEmpleados_Click" Width="200" Click="CargarEmpleados_Click"/>
            <Button Content="Guardar Cambios" Width="200" Margin="0,10,0,0" Click="GuardarCambios_Click"/>
            <DataGrid x:Name="AdminDataGrid" AutoGenerateColumns="True" IsReadOnly="False" CanUserAddRows="False" Margin="0,10,0,0"/>
            <ComboBox x:Name ="AdminComboBox" Margin="0,10,0,0" DropDownOpened="AdminComboBox_DropDownOpened" SelectionChanged="AdminComboBox_SelectionChanged"/>
            <ComboBox x:Name="ObraComboBox" Margin="0,10,0,0" DropDownOpened="ObraComboBox_DropDownOpened" SelectionChanged="ObraComboBox_SelectionChanged"/>


        </StackPanel>
    </Grid>
</Window>
