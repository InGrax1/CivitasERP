<Page x:Class="CivitasERP.AdminViews.EditAdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CivitasERP.AdminViews"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditAdminPage"  
      Background="{StaticResource BackgroudColor}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="*"/>
            <!-- Formulario -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
        </Grid.RowDefinitions>

        <!-- 1) Título -->
        <TextBlock Grid.Row="0"
           Text="Modificar datos de Administrador"
           FontSize="24"
           FontWeight="Bold"
           Foreground="#6666FF"
           HorizontalAlignment="Center"
           Margin="0,0,0,20"/>

        <!-- 2) Formulario -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Nombre -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre:" Margin="0,0,5,10" VerticalAlignment="Center"/>
            <TextBox    Grid.Row="0" Grid.Column="1" x:Name="TxtNombre" Margin="0,0,20,10" Height="30"/>

            <!-- Apellido P -->
            <TextBlock Grid.Row="0" Grid.Column="2" Text="Apellido P:" Margin="0,0,5,10" VerticalAlignment="Center"/>
            <TextBox    Grid.Row="0" Grid.Column="3" x:Name="TxtApellidoP" Height="30"/>

            <!-- Apellido M -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Apellido M:" Margin="0,0,5,10" VerticalAlignment="Center"/>
            <TextBox    Grid.Row="1" Grid.Column="1" x:Name="TxtApellidoM" Margin="0,0,20,10" Height="30"/>

            <!-- Sueldo Semanal -->
            <TextBlock Grid.Row="1" Grid.Column="2" Text="Sueldo Semanal:" Margin="0,0,5,10" VerticalAlignment="Center"/>
            <TextBox    Grid.Row="1" Grid.Column="3" x:Name="TxtSueldoSemanal" Height="30"/>

            <!-- Horas Extra -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Horas Extra:" Margin="0,0,5,10" VerticalAlignment="Center"/>
            <TextBox    Grid.Row="2" Grid.Column="1" x:Name="TxtHorasExtra" Margin="0,0,20,10" Height="30"/>

            <!-- Multiplicador -->
            <TextBlock Grid.Row="2" Grid.Column="2" Text="Multiplicador:" Margin="0,0,5,10" VerticalAlignment="Center"/>
            <ComboBox  Grid.Row="2" Grid.Column="3" x:Name="CbxMultiplicador" Height="30">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="1.5"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="2.5"/>
                <ComboBoxItem Content="3"/>
            </ComboBox>

            <!-- Categoría -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Categoría:" Margin="0,0,5,10" VerticalAlignment="Center"/>
            <ComboBox  Grid.Row="3" Grid.Column="1" x:Name="CbxCategoria" Margin="0,0,20,10" Height="30"/>

            <!-- Obra -->
            <TextBlock Grid.Row="3" Grid.Column="2" Text="Obra:" Margin="0,0,5,10" VerticalAlignment="Center"/>
            <ComboBox  Grid.Row="3" Grid.Column="3" x:Name="CbxObra" Height="30"/>

            <!-- Correo -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Correo" Margin="0,0,5,10" VerticalAlignment="Center"/>
            <TextBox    Grid.Row="4" Grid.Column="1" x:Name="TxtCorreo" Margin="0,0,20,10" Height="30"/>
        </Grid>

        <!-- 3) Botones Guardar / Cancelar -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Cancelar"
                    Padding="10,5"
                    Click="BtnCancelar_Click"/>
            <Button Content="Guardar"
                    Background="#6666FF"
                    Foreground="White"
                    Padding="10,5"
                    Click="BtnGuardar_Click"/>
        </StackPanel>
    </Grid>
</Page>
