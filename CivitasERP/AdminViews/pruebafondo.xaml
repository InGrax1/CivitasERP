<Window x:Class="CivitasERP.AdminViews.pruebafondo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CivitasERP.AdminViews"
        mc:Ignorable="d"
        Title="pruebafondo" Height="450" Width="800">
    <Grid>
        <!-- 1) fondo blanco -->
        <Rectangle Fill="White" />

        <!-- 2) franjas diagonales -->
        <Canvas>
            <!-- franja 1 -->
            <Rectangle Width="350" Height="40"
                 RadiusX="20" RadiusY="20"
                 Fill="#5C7CFF" Opacity="0.2"
                 Canvas.Left="58" Canvas.Top="124" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-43.612"/>
                        <TranslateTransform X="15.945554337723227" Y="89.5096189432334"/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>

            <!-- franja 2 -->
            <Rectangle Width="300" Height="40"
                 RadiusX="20" RadiusY="20"
                 Fill="#5C7CFF" Opacity="0.2"
                 Canvas.Left="-16" Canvas.Top="333">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-43.009"/>
                        <TranslateTransform X="13.846189432334192" Y="76.6746824526945"/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>

            <!-- franja 3 -->
            <Rectangle Width="400" Height="40"
                 RadiusX="20" RadiusY="20"
                 Fill="#5C7CFF" Opacity="0.2"
                 Canvas.Left="177" Canvas.Top="337" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-43.423"/>
                        <TranslateTransform X="21.794919243112258" Y="101.3397459621556"/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>



            <!-- 3) “blob” grande en bottom-right -->
            <Rectangle Width="701" Height="336"
                RadiusX="150" RadiusY="150"
                Fill="#5C7CFF" Opacity="1"
                Canvas.Left="283" Canvas.Top="342" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-43.423"/>
                        <TranslateTransform X="21.794919243112258" Y="101.3397459621556"/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
        </Canvas>
    </Grid>
</Window>
