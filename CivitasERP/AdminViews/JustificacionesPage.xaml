<Page x:Class="CivitasERP.AdminViews.JustificacionesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CivitasERP.AdminViews"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JustificacionesPage"
      Background="{StaticResource BackgroudColor}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="*"/>
            <!-- Formulario -->
            <RowDefinition Height="Auto"/>
            <!-- Botón Guardar -->
        </Grid.RowDefinitions>

        <!-- 1) Título -->
        <TextBlock Grid.Row="0"
               Text="Asignar Justificación"
               FontSize="24"
               FontWeight="Bold"
               Foreground="#6666FF"
               HorizontalAlignment="Center"
               Margin="0,0,0,20"/>
        <!--HEAD-->
        <Grid Grid.Row="1" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--SELECTOR DE Admin-->
            <StackPanel Grid.Row="2" Grid.Column="0">
                <TextBlock Text="Elegir Admin" 
                           Margin="0,0,0,0" 
                           VerticalAlignment="Center" 
                           Foreground="{StaticResource titleColorA}"/>
                <Border Background="#F0F0F0" 
                        CornerRadius="10" 
                        Padding="3"
                        Margin="0,0,0,0"
                        BorderThickness="1" 
                        BorderBrush="{StaticResource primaryColor4}">
                    <!--DockPanel para foto con comobo box-->
                    <DockPanel LastChildFill="True" VerticalAlignment="Center">
                        <Image Source="/Images/SearchPersonBlue.png"
                               Width="24" Height="24"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               DockPanel.Dock="Left">
                        </Image>
                        <ComboBox x:Name="Admin2ComboBox" 
                                    BorderThickness="0">
                        </ComboBox>
                    </DockPanel>
                </Border>
            </StackPanel>
            <!--SELECTOR DE OBRA-->
            <StackPanel Grid.Row="2" Grid.Column="1">
                <TextBlock Text="Elegir Obra" 
                           Margin="0,0,0,0" 
                           VerticalAlignment="Center" 
                           Foreground="{StaticResource titleColorA}"/>
                <Border Background="#F0F0F0" 
                        CornerRadius="10" 
                        Padding="3"
                        Margin="0,0,0,0"
                        BorderThickness="1" 
                        BorderBrush="{StaticResource primaryColor4}">
                    <!--DockPanel para foto con comobo box-->
                    <DockPanel LastChildFill="True" VerticalAlignment="Center">
                        <Image Source="/Images/FrontLoaderBlue.png"
                               Width="24" Height="24"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               DockPanel.Dock="Left">
                        </Image>
                        <ComboBox x:Name="ObraComboBox" 
                                  BorderThickness="0">
                        </ComboBox>
                    </DockPanel>
                </Border>
            </StackPanel>
            <!--SELECTOR DE EMPLEADO-->
            <StackPanel Grid.Row="2" Grid.Column="2">
                <TextBlock Text="Elegir Empleado" 
                           Margin="0,0,0,0" 
                           VerticalAlignment="Center" 
                           Foreground="{StaticResource titleColorA}"/>
                <Border Background="#F0F0F0" 
                        CornerRadius="10" 
                        Padding="3"
                        Margin="0,0,0,0"
                        BorderThickness="1" 
                        BorderBrush="{StaticResource primaryColor4}">
                    <!--DockPanel para foto con comobo box-->
                    <DockPanel LastChildFill="True" VerticalAlignment="Center">
                        <Image Source="/Images/SearchPersonBlue.png"
                               Width="24" Height="24"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               DockPanel.Dock="Left">
                        </Image>
                        <ComboBox x:Name="EmpleadoComboBox" 
                                  BorderThickness="0">
                        </ComboBox>
                    </DockPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- 2) Formulario de selección -->
        <WrapPanel Grid.Row="2"
               Orientation="Horizontal"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               ItemHeight="Auto"
               ItemWidth="Auto"
               Margin="0,0,0,20">
            <!-- Año -->
            <StackPanel Orientation="Vertical" MinWidth="120">
                <TextBlock Text="Año" FontSize="16" Margin="0,0,0,5"/>
                <Border Background="#F5F5F5"
                CornerRadius="5"
                BorderBrush="#6666FF"
                BorderThickness="1"
                MinHeight="30">
                    <ComboBox x:Name="CbxAnio"
                    Background="Transparent"
                    BorderThickness="0"
                    VerticalContentAlignment="Center"
                    Padding="5"/>
                </Border>
            </StackPanel>

            <!-- Mes -->
            <StackPanel Orientation="Vertical" MinWidth="120">
                <TextBlock Text="Mes" FontSize="16" Margin="0,0,0,5"/>
                <Border Background="#F5F5F5"
                CornerRadius="5"
                BorderBrush="#6666FF"
                BorderThickness="1"
                MinHeight="30">
                    <ComboBox x:Name="CbxMes"
                    Background="Transparent"
                    BorderThickness="0"
                    VerticalContentAlignment="Center"
                    Padding="5"/>
                </Border>
            </StackPanel>

            <!-- Semana -->
            <StackPanel Orientation="Vertical" MinWidth="120">
                <TextBlock Text="Semana" FontSize="16" Margin="0,0,0,5"/>
                <Border Background="#F5F5F5"
                CornerRadius="5"
                BorderBrush="#6666FF"
                BorderThickness="1"
                MinHeight="30">
                    <ComboBox x:Name="CbxSemana"
                    Background="Transparent"
                    BorderThickness="0"
                    VerticalContentAlignment="Center"
                    Padding="5"/>
                </Border>
            </StackPanel>

            <!-- Día -->
            <StackPanel Orientation="Vertical" MinWidth="120">
                <TextBlock Text="Día" FontSize="16" Margin="0,0,0,5"/>
                <Border Background="#F5F5F5"
                CornerRadius="5"
                BorderBrush="#6666FF"
                BorderThickness="1"
                MinHeight="30">
                    <ComboBox x:Name="CbxDia"
                    Background="Transparent"
                    BorderThickness="0"
                    VerticalContentAlignment="Center"
                    Padding="5"/>
                </Border>
            </StackPanel>
        </WrapPanel>

        <!-- 3) Botón Guardar -->
        <Button Grid.Row="3"
            x:Name="BtnGuardarJustificacion"
            Content="Guardar"
            Background="#6666FF"
            Foreground="White"
            FontWeight="Bold"
            Padding="10,5"
            HorizontalAlignment="Right"
            Width="120"
            Click="BtnGuardarJustificacion_Click"/>
    </Grid>
</Page>
