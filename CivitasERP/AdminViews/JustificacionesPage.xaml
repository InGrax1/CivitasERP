<Page x:Class="CivitasERP.AdminViews.JustificacionesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CivitasERP.AdminViews"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1800"
      Title="JustificacionesPage"
      Background="{StaticResource BackgroudColor}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 1) Título -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Asignar Justificaciones"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#6666FF"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Text="Sección para poder justificar las faltas de los empleados en general"
                       Foreground="{StaticResource titleColor3}"
                       HorizontalAlignment="Center"
                       FontWeight="Light"
                       FontSize="15"/>
            
            <TextBlock Foreground="{StaticResource titleColor3}"
                       HorizontalAlignment="Center"
                       FontWeight="Light"
                       FontSize="15"
                       Margin="0,10,0,0"
                       TextWrapping="Wrap">
                1.- Selecciona si quieres modificar un Administrador o Empleado<LineBreak/>
                2.- Si es un Administrador seleccionalo en la opcion de *Elegir Admin*<LineBreak/>
                3.- Si es un Empleado selecciona la obra en la que se encuentra y el nombre de la persona<LineBreak/>
                4.- Haz las modificaiones de Fecha o Horas extra (peden ser ambas)<LineBreak/>
                Nota: *Solo se puede un administrador o empleado a la vez*

            </TextBlock>
        </StackPanel>

        <!--Card Opcions Admin/Empleado-->
        <StackPanel Grid.Row="1" Margin="30">
            <!--Banner Titulo-->
            <StackPanel Panel.ZIndex="1">
                <Border Background="{StaticResource primaryColor1}" 
                CornerRadius="10" 
                Padding="5" 
                Width="185"
                Height="35"
                Margin="0,0,0,-20">
                    <TextBlock Text="Selecciona una opcion" 
                       FontSize="12" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                </Border>
            </StackPanel>
            <Border Background="{StaticResource Color1}"
            CornerRadius="30">

            </Border>
        </StackPanel>


        <!--Fomulario-->
        <Grid Grid.Row="2" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <!--SELECTOR DE Admin-->
            <StackPanel Grid.Row="1" Grid.Column="0" Width="300" Margin="0,20,50,0">
                <TextBlock Text="Elegir Admin" 
                           Margin="0,0,0,0" 
                           VerticalAlignment="Center" 
                           Foreground="{StaticResource titleColorA}"/>
                <Border Background="#F0F0F0" 
                        CornerRadius="10" 
                        Padding="3"
                        Margin="0,0,0,0"
                        BorderThickness="1" 
                        BorderBrush="{StaticResource primaryColor4}">
                    <!--DockPanel para foto con comobo box-->
                    <DockPanel LastChildFill="True" VerticalAlignment="Center">
                        <Image Source="/Images/SearchPersonBlue.png"
                               Width="24" Height="24"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               DockPanel.Dock="Left">
                        </Image>
                        <ComboBox x:Name="Admin2ComboBox" 
                                  BorderThickness="0"
                                  DropDownOpened="Admin2ComboBox_DropDownOpened"
                                  SelectionChanged="Admin2ComboBox_SelectionChanged">
                        </ComboBox>
                    </DockPanel>
                </Border>
            </StackPanel>

            <!--SELECTOR DE OBRA-->
            <StackPanel Grid.Row="0" Grid.Column="1" Width="300" Margin="0,20,0,0" HorizontalAlignment="Center">
                <TextBlock Text="Elegir Obra" 
                           Margin="0,0,0,0" 
                           VerticalAlignment="Center" 
                           Foreground="{StaticResource titleColorA}"/>
                <Border Background="#F0F0F0" 
                        CornerRadius="10" 
                        Padding="3"
                        Margin="0,0,0,0"
                        BorderThickness="1" 
                        BorderBrush="{StaticResource primaryColor4}">
                    <!--DockPanel para foto con comobo box-->
                    <DockPanel LastChildFill="True" VerticalAlignment="Center">
                        <Image Source="/Images/FrontLoaderBlue.png"
                               Width="24" Height="24"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               DockPanel.Dock="Left">
                        </Image>
                        <ComboBox x:Name="ObraComboBox" 
                                  BorderThickness="0"
                                  DropDownOpened="ObraComboBox_DropDownOpened"
                                  SelectionChanged="ObraComboBox_SelectionChanged">
                        </ComboBox>

                    </DockPanel>
                </Border>
            </StackPanel>

            <!--SELECTOR DE EMPLEADO-->
            <StackPanel Grid.Row="1" Grid.Column="1" Width="300" Margin="0,15,0,0" HorizontalAlignment="Center">
                <TextBlock Text="Elegir Empleado" 
                           Margin="0,0,0,0" 
                           VerticalAlignment="Center" 
                           Foreground="{StaticResource titleColorA}"/>
                <Border Background="#F0F0F0" 
                        CornerRadius="10" 
                        Padding="3"
                        Margin="0,0,0,0"
                        BorderThickness="1" 
                        BorderBrush="{StaticResource primaryColor4}">
                    <!--DockPanel para foto con comobo box-->
                    <DockPanel LastChildFill="True" VerticalAlignment="Center">
                        <Image Source="/Images/SearchPersonBlue.png"
                               Width="24" Height="24"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               DockPanel.Dock="Left">
                        </Image>
                        <ComboBox x:Name="EmpleadoComboBox" 
                                  BorderThickness="0"
                                    SelectionChanged="EmpleadoComboBox_SelectionChanged" 
                                    DropDownOpened="EmpleadoComboBox_DropDownOpened">

                        </ComboBox>
                    </DockPanel>
                </Border>
            </StackPanel>


            <!-- 1) Formulario de INASISTENCIA -->
            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,30,0,0">
                <TextBlock Text="Justificación de Inasistencia"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource titleColorA}"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,10"/>
                <TextBlock FontSize="15"
                           FontWeight="Light"
                           Foreground="{StaticResource titleColor3}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,0">
                    Selecciona la fecha de inasistencia de la persona<LineBreak/>
                    Nota:Si requieres justificar varias fechas, deberas seleccionar una fecha a la vez
                </TextBlock>
            </StackPanel>
            <!--Card Datos-->
            <StackPanel Grid.Row="3" Grid.Column="0" Margin="30">
                <!--Banner Titulo-->
                <StackPanel Panel.ZIndex="1">
                    <Border Background="{StaticResource primaryColor1}" 
                            CornerRadius="10" 
                            Padding="5" 
                            Width="185"
                            Height="35"
                            Margin="0,0,0,-20">
                        <TextBlock Text="Fecha de Justificación" 
                                   FontSize="12" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <Border Background="{StaticResource Color1}"
                        CornerRadius="30">
                    <WrapPanel Orientation="Horizontal"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               ItemHeight="Auto"
                               ItemWidth="Auto"
                               Margin="25">
                        <!-- Año -->
                        <StackPanel Orientation="Vertical" MinWidth="120" Margin="0,0,10,0">
                            <TextBlock Text="Año" FontSize="15" Foreground="{StaticResource titleColorA}"/>
                            <Border Background="#F5F5F5"
                                    CornerRadius="5"
                                    BorderBrush="#6666FF"
                                    BorderThickness="1"
                                    MinHeight="30"
                                    Padding="2">
                                <ComboBox x:Name="CbxAnio"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          VerticalContentAlignment="Center"
                                        SelectionChanged="CbxAnio_SelectionChanged" 
                                        DropDownOpened="CbxAnio_DropDownOpened"/>


                            </Border>
                        </StackPanel>

                        <!-- Mes -->
                        <StackPanel Orientation="Vertical" MinWidth="120" Margin="0,0,10,0">
                            <TextBlock Text="Mes" FontSize="15" Foreground="{StaticResource titleColorA}"/>
                            <Border Background="#F5F5F5"
                                    CornerRadius="5"
                                    BorderBrush="#6666FF"
                                    BorderThickness="1"
                                    MinHeight="30"
                                    Padding="2">
                                <ComboBox x:Name="CbxMes"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          VerticalContentAlignment="Center"
                                                SelectionChanged="CbxMes_SelectionChanged" 
                                                DropDownOpened="CbxMes_DropDownOpened"/>
                            </Border>
                        </StackPanel>
                        <!-- Semana -->
                        <StackPanel Orientation="Vertical" MinWidth="120" Margin="0,0,10,0">
                            <TextBlock Text="Semana" FontSize="15" Foreground="{StaticResource titleColorA}"/>
                            <Border Background="#F5F5F5"
                                    CornerRadius="5"
                                    BorderBrush="#6666FF"
                                    BorderThickness="1"
                                    MinHeight="30"
                                    Padding="2">
                                <ComboBox x:Name="CbxSemana"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          VerticalContentAlignment="Center"
                                            SelectionChanged="CbxSemana_SelectionChanged" 
                                            DropDownOpened="CbxSemana_DropDownOpened"/>
                            </Border>
                        </StackPanel>
                        <!-- Día -->
                        <StackPanel Orientation="Vertical" MinWidth="120" Margin="0,0,10,0">
                            <TextBlock Text="Día" FontSize="15" Foreground="{StaticResource titleColorA}"/>
                            <Border Background="#F5F5F5"
                                    CornerRadius="5"
                                    BorderBrush="#6666FF"
                                    BorderThickness="1"
                                    MinHeight="30"
                                    Padding="2">
                                <ComboBox x:Name="CbxDia"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          VerticalContentAlignment="Center"
                                                SelectionChanged="CbxDia_SelectionChanged" 
                                                DropDownOpened="CbxDia_DropDownOpened"/>
                            </Border>
                        </StackPanel>
                    </WrapPanel>
                </Border>
            </StackPanel>
            <!-- 2) Formulario de HORA EXTRA -->
            <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,30,0,0">
                <TextBlock Text="Justificación de Horas Extras"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource titleColorA}"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,10"/>
                <TextBlock Text="Selecciona la cantidad de horas extra y el multiplicador"
                           FontSize="15"
                           FontWeight="Light"
                           Foreground="{StaticResource titleColor3}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,0"/>
            </StackPanel>
            <!--Card Datos-->
            <StackPanel Grid.Row="3" Grid.Column="1" Margin="30">
                <!--Banner Titulo-->
                <StackPanel Panel.ZIndex="1">
                    <Border Background="{StaticResource primaryColor1}" 
                            CornerRadius="10" 
                            Padding="5" 
                            Width="185"
                            Height="35"
                            Margin="0,0,0,-20">
                        <TextBlock Text="Asignar horas extra" 
                                   FontSize="12" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
                <Border Background="{StaticResource Color1}"
                        CornerRadius="30">
                    <WrapPanel Orientation="Horizontal"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               ItemHeight="Auto"
                               ItemWidth="Auto"
                               Margin="25">
                        <!-- Hora Extra -->
                        <StackPanel Orientation="Vertical" MinWidth="120" Margin="0,0,10,0">
                            <TextBlock Text="Hora Extra" FontSize="15" Foreground="{StaticResource titleColorA}"/>
                            <Border Background="#F5F5F5"
                                    CornerRadius="5"
                                    BorderBrush="#6666FF"
                                    BorderThickness="1"
                                    MinHeight="30"
                                    Padding="2">
                                <TextBox x:Name="TxtHorasExtra"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          VerticalContentAlignment="Center"/>
                            </Border>
                        </StackPanel>
                        <!-- Multiplocador -->
                        <StackPanel Orientation="Vertical" MinWidth="120" Margin="0,0,10,0">
                            <TextBlock Text="Multiplicador de Horas Extra" FontSize="15" Foreground="{StaticResource titleColorA}"/>
                            <Border Background="#F5F5F5"
                                    CornerRadius="5"
                                    BorderBrush="#6666FF"
                                    BorderThickness="1"
                                    MinHeight="30"
                                    Padding="2">
                                <ComboBox x:Name="CbxMultiplicador" BorderThickness="0"
                                           SelectionChanged="CbxMultiplicador_SelectionChanged" >
                                    <ComboBoxItem Content="1"/>
                                    <ComboBoxItem Content="1.5"/>
                                    <ComboBoxItem Content="2"/>
                                    <ComboBoxItem Content="2.5"/>
                                    <ComboBoxItem Content="3"/>
                                </ComboBox>
                            </Border>
                        </StackPanel>
                    </WrapPanel>
                </Border>
            </StackPanel>

            <!-- 3) Botón Guardar -->
            <Button Grid.Row="4" Grid.Column="0"
                    Style="{StaticResource LargeRoundButton}"
                    Background="{StaticResource buttonColor2}"
                    x:Name="btnJustIna"
                    Margin="20"
                    Width="250"
                    Click="BtnGuardarInasistencia_Click">
                <TextBlock Text="Guardar Justificacion" FontSize="20" Foreground="White"/>
            </Button>


            <!-- 3) Botón Guardar -->
            <Button Grid.Row="4" Grid.Column="1"
                    Style="{StaticResource LargeRoundButton}"
                    Background="{StaticResource buttonColor2}"
                    x:Name="btnJustHrx"
                    Margin="20"
                    Width="250"
                    Click="BtnGuardarHoraExt_Click">
                <TextBlock Text="Guardar Hora Extra" FontSize="20" Foreground="White"/>
            </Button>
            
            <!-- 4) Botón Historial -->
            <Button Grid.Row="4" Grid.Column="2"
                    Style="{StaticResource LargeRoundButton}"
                    Background="{StaticResource buttonColor2}"
                    x:Name="btnJustHrs"
                    Margin="20"
                    Width="250"
                    Click="BtnHistorialHrsExt_Click">
                <TextBlock Text="Historial Horas Extra" FontSize="20" Foreground="White"/>
            </Button>
        </Grid>

        <!--FONDO-->
        <!-- 2) franjas diagonales -->
        <Canvas Panel.ZIndex="-1">
            <!-- franja 1 -->
            <Rectangle Width="638" Height="60"
           RadiusX="20" RadiusY="20"
           Fill="#5C7CFF" Opacity="0.2"
           Canvas.Left="54" Canvas.Top="279" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-43.612"/>
                        <TranslateTransform X="15.945554337723227" Y="89.5096189432334"/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>

            <!-- franja 2 -->
            <Rectangle Width="714" Height="60"
           RadiusX="20" RadiusY="20"
           Fill="#5C7CFF" Opacity="0.2"
           Canvas.Left="-36" Canvas.Top="864" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-43.009"/>
                        <TranslateTransform X="13.846189432334192" Y="76.6746824526945"/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>

            <!-- franja 3 -->
            <Rectangle Width="806" Height="60"
           RadiusX="20" RadiusY="20"
           Fill="#5C7CFF" Opacity="0.2"
           Canvas.Left="302" Canvas.Top="896" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-43.423"/>
                        <TranslateTransform X="21.794919243112258" Y="101.3397459621556"/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>

            <!-- 3) “blob” grande en bottom-right -->
            <Rectangle Width="1415" Height="789"
                    RadiusX="150" RadiusY="150"
                    Fill="#5C7CFF" Opacity="1"
                    Canvas.Left="845" Canvas.Top="873" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-43.423"/>
                        <TranslateTransform X="21.794919243112258" Y="101.3397459621556"/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
        </Canvas>
    </Grid>
</Page>
