<Page x:Class="CivitasERP.Views.Usuario.ListaPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:vm = "clr-namespace:CivitasERP.ViewModels"
        Title="NominaPage"
        MinHeight="800" MinWidth="600"
        Background="{StaticResource BackgroudColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <!-- HEADER -->
        <ScrollViewer Grid.Row="0"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Disabled"
                      Margin="0,0,0,10">
            <!-- FILTROS -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!-- Título -->
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5"
                           Text="LISTA DE PERSONAL Y NÓMINA"
                           FontSize="26" FontWeight="Bold"
                           Margin="0,0,0,20"
                           Foreground="{StaticResource titleColorA}"/>

                <!--Filtros-->
                <Border Grid.Row="1" Grid.Column="0" 
                        Background="{StaticResource Color4}" 
                        Padding="5" 
                        Margin="5" 
                        CornerRadius="15" 
                        BorderBrush="{StaticResource Color1}" 
                        BorderThickness="1">
                    <StackPanel Grid.Row="1" Margin="5">
                        <!--OPCION ADMINISTRADOR ADMINS-->
                        <StackPanel>
                            <TextBlock x:Name="AdminLabel"
                                       Text="Superintendente" FontSize="16"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource titleColorB}"/>
                            <Border x:Name="AdminBorder"
                                    Background="Transparent" 
                                    CornerRadius="10"
                                    BorderBrush="{StaticResource primaryColor1}" 
                                    BorderThickness="1"
                                    MinHeight="30"
                                    MinWidth="80"
                                    Padding="3"
                                    Margin="0,0,0,10">
                                <ComboBox x:Name="AdminComboBox"
                                          Background="Transparent"
                                          BorderBrush="Transparent"
                                          BorderThickness="0"
                                          FontSize="14"
                                          VerticalContentAlignment="Stretch"
                                          Padding="5"
                                          IsEditable="False"
                                          IsReadOnly="False"
                                          DropDownOpened="AdminComboBox_DropDownOpened"
                                          SelectionChanged="AdminComboBox_SelectionChanged">
                                </ComboBox>
                            </Border>
                        </StackPanel>

                        <!-- Obra -->
                        <StackPanel>
                            <TextBlock Text="Obra" FontSize="16"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource titleColorB}"/>
                            <Border Background="Transparent" 
                                    CornerRadius="10"
                                    BorderBrush="{StaticResource primaryColor1}" 
                                    BorderThickness="1"
                                    MinHeight="30"
                                    MinWidth="80"
                                    Padding="3"
                                    Margin="0,0,0,10">
                                <ComboBox x:Name="ObraComboBox"
                                          Background="Transparent"
                                          BorderBrush="Transparent"
                                          BorderThickness="0"
                                          FontSize="14"
                                          VerticalContentAlignment="Stretch"
                                          Padding="5"
                                          IsEditable="False"
                                          IsReadOnly="False" 
                                          DropDownOpened="ObraComboBox_DropDownOpened"
                                          SelectionChanged="ObraComboBox_SelectionChanged">
                                </ComboBox>
                            </Border>
                        </StackPanel>

                        <!-- Ubicación -->
                        <StackPanel>
                            <TextBlock Text="Ubicación"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource titleColorB}"/>
                            <Border Background="Transparent"
                                    CornerRadius="10"
                                    BorderBrush="{StaticResource primaryColor1}" 
                                    BorderThickness="1"
                                    Height="30"
                                    Margin="0,0,0,0">
                                <TextBlock x:Name="UbicacionLabel"
                                           Text="Ubicacion..."
                                           Background="Transparent"
                                           Padding="5"
                                           Foreground="Black"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                    <!--Stackpanel filtros fin-->
                </Border>

                <!-- Controles de fecha y botones -->
                <Border Grid.Row="1" Grid.Column="1" 
                        Background="{StaticResource Color4}" 
                        Padding="5" 
                        Margin="5" 
                        CornerRadius="15" 
                        BorderBrush="{StaticResource Color1}" 
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!-- Selector de fechas -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                            <!-- Botón que muestra el rango actual y abre el calendario -->
                            <Button x:Name="btnSeleccionarFechas"
                                    Content="📅 Seleccionar fechas"
                                    Click="AbrirCalendario_Click"
                                    Foreground="{StaticResource titleColor4}"
                                    Background="{StaticResource buttonColor1}"
                                    Style="{StaticResource LargeRoundButton}"/>

                            <!-- Información del rango seleccionado label -->
                            <Border Background="#ECF0F1" 
                                    CornerRadius="10" 
                                    Padding="10,8" 
                                    Margin="10,0,0,0">
                                <TextBlock x:Name="lblRangoInfo" 
                                           Text="Selecciona un rango de fechas"
                                           FontWeight="Bold"
                                           Foreground="#2C3E50"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <!-- Popup con el Calendar -->
                            <!--Hace referencia al boton btnSeleccionarFechas -->
                            <Popup x:Name="PopupCalendario" 
                                   PlacementTarget="{Binding ElementName=btnSeleccionarFechas}"
                                   Placement="Bottom" 
                                   StaysOpen="False"
                                   AllowsTransparency="True"
                                   PopupAnimation="Slide">
                                <Border BorderBrush="#BDC3C7" 
                                        BorderThickness="2" 
                                        Background="White" 
                                        CornerRadius="10">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" 
                                                          Direction="315" 
                                                          ShadowDepth="5" 
                                                          Opacity="0.3" 
                                                          BlurRadius="10"/>
                                    </Border.Effect>

                                    <StackPanel Margin="15">
                                        <!-- Encabezado del popup -->
                                        <Border Background="#3498DB" 
                                                CornerRadius="5,5,0,0" 
                                                Padding="10,5" 
                                                Margin="-15,-15,-15,10">
                                            <TextBlock Text="Seleccionar Rango de Fechas" 
                                                       Foreground="White" 
                                                       FontWeight="Bold" 
                                                       HorizontalAlignment="Center"/>
                                        </Border>

                                        <!-- Calendar -->
                                        <Calendar x:Name="CalendarRango"
                                                  SelectionMode="MultipleRange"
                                                  FirstDayOfWeek="Monday"
                                                  IsTodayHighlighted="True"
                                                  SelectedDatesChanged="CalendarRango_SelectedDatesChanged"
                                                  DisplayModeChanged="CalendarRango_DisplayModeChanged">

                                            <!-- Estilo personalizado para el Calendar -->
                                            <Calendar.CalendarDayButtonStyle>
                                                <Style TargetType="CalendarDayButton">
                                                    <Setter Property="Width" Value="35"/>
                                                    <Setter Property="Height" Value="30"/>
                                                    <Setter Property="FontSize" Value="11"/>
                                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                </Style>
                                            </Calendar.CalendarDayButtonStyle>
                                        </Calendar>

                                        <!-- Información y botones de cierre -->
                                        <Border Background="#F8F9FA" 
                                                CornerRadius="5" 
                                                Padding="8" 
                                                Margin="0,10,0,0">
                                            <StackPanel>
                                                <TextBlock Text="💡 Haz clic en una fecha para iniciar, luego en otra para completar el rango" 
                                                           FontSize="10" 
                                                           Foreground="#7F8C8D" 
                                                           TextWrapping="Wrap"
                                                           HorizontalAlignment="Center"/>

                                                <Button Content="Cerrar" 
                                                        Click="CerrarCalendario_Click"
                                                        Margin="0,5,0,0"
                                                        Padding="20,3"
                                                        Background="#95A5A6"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        FontSize="10"
                                                        HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </StackPanel>
                        <!-- Botones de rango rápido -->
                        <StackPanel Grid.Row="1" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,5">

                            <Button x:Name="btnSemanaActual" 
                                    Content="📅 Semana Actual"
                                    Style="{StaticResource LargeRoundButton}"
                                    Background="#27AE60"
                                    Foreground="WhiteSmoke"
                                    Click="BtnSemanaActual_Click"/>

                            <Button x:Name="btnMesActual" 
                                    Content="📊 Mes Actual"
                                    Style="{StaticResource LargeRoundButton}"
                                    Background="#2ECC71"
                                    Foreground="WhiteSmoke"
                                    Click="BtnMesActual_Click"/>

                            <Button x:Name="btnSemanaAnterior" 
                                    Content="⬅️ Semana Anterior"
                                    Style="{StaticResource LargeRoundButton}"
                                    Background="#E67E22"
                                    Foreground="WhiteSmoke"
                                    Click="BtnSemanaAnterior_Click"/>

                            <Button x:Name="btnMesAnterior" 
                                    Content="⬅️ Mes Anterior"
                                    Style="{StaticResource LargeRoundButton}"
                                    Background="#D35400"
                                    Foreground="WhiteSmoke"
                                    Click="BtnMesAnterior_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Agregar Nuevo Empleado -->
                <Border Grid.Row="1" Grid.Column="3" 
                        Background="{StaticResource Color4}" 
                        Padding="5" 
                        Margin="5" 
                        CornerRadius="15" 
                        BorderBrush="{StaticResource Color1}" 
                        BorderThickness="1" 
                        x:Name="Stack3Menu">
                    <!-- Botón Huella -->
                    <Button Grid.Row="3"
                            Grid.Column="4"
                            x:Name="btnHuellaLista"
                            HorizontalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="btnHuellaR_Click">
                        <StackPanel>
                            <TextBlock Text= "Pase de Lista" 
                                       Foreground="#5F5FFF"
                                       FontSize="13"
                                       Margin="0,0,0,10"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                            <Image Source="/Images/huella-dactilar.png"
                                   Width="70"
                                   Height="70"
                                   HorizontalAlignment="Stretch"/>
                            <TextBlock x:Name="lblEstadoHuella"
                                       Text= "{Binding EstadoHuella}"
                                       Foreground="#5F5FFF"
                                       FontSize="13"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>
            </Grid>
        </ScrollViewer>


        <!-- DATA GRID -->
        <Border Grid.Row="1" 
                CornerRadius="20"
                Background="#E5E5E5"
                SnapsToDevicePixels="True">
            <DataGrid x:Name="dataGridAsistencia"
                      ColumnWidth="*"
                      MinColumnWidth="80"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      Margin="10"
                      HeadersVisibility="Column"
                      GridLinesVisibility="None"
                      HorizontalContentAlignment="Center"
                      FontSize="15"
                      EnableRowVirtualization="True"
                      EnableColumnVirtualization="True"
                      VirtualizingStackPanel.IsVirtualizing="True"
                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                      ScrollViewer.IsDeferredScrollingEnabled="True"
                      AlternationCount="2">
                <!-- Aplica tu estilo -->
                <DataGrid.ColumnHeaderStyle>
                    <StaticResource ResourceKey="ColumnHeaderRound"/>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns >
                    <DataGridTextColumn Header="#" Binding="{Binding ID}" Width="50"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" MinWidth="100" MaxWidth="150"/>
                    <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria}" MinWidth="100" MaxWidth="130"/>

                    <!-- LUNES: agrupa Entrada y Salida -->
                    <DataGridTemplateColumn MinWidth="120" Width="*">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="Lunes" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14"/>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Entrada" HorizontalAlignment="Center" FontSize="12" Margin="5" />
                                        <TextBlock Grid.Column="1" Text="Salida"  HorizontalAlignment="Center" FontSize="12" Margin="5"/>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding EntradaL, StringFormat={}{0:hh\\:mm}}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SalidaL, StringFormat={}{0:hh\\:mm}}" HorizontalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- MARTES: agrupa Entrada y Salida -->
                    <DataGridTemplateColumn MinWidth="120" Width="*">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="Martes" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14"/>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Entrada" HorizontalAlignment="Center" FontSize="12" Margin="5"/>
                                        <TextBlock Grid.Column="1" Text="Salida" HorizontalAlignment="Center" FontSize="12" Margin="5"/>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding EntradaM, StringFormat={}{0:hh\\:mm}}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SalidaM, StringFormat={}{0:hh\\:mm}}" HorizontalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- MIERCOLES: agrupa Entrada y Salida -->
                    <DataGridTemplateColumn MinWidth="120" Width="*">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="Miercoles" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14"/>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Entrada" Margin="5" HorizontalAlignment="Center" FontSize="12"/>
                                        <TextBlock Grid.Column="1" Text="Salida" Margin="5" HorizontalAlignment="Center" FontSize="12"/>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding EntradaMI, StringFormat={}{0:hh\\:mm}}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SalidaMI, StringFormat={}{0:hh\\:mm}}" HorizontalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- JUEVES: agrupa Entrada y Salida -->
                    <DataGridTemplateColumn MinWidth="120" Width="*">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="Jueves" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14"/>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Entrada" Margin="5" HorizontalAlignment="Center" FontSize="12"/>
                                        <TextBlock Grid.Column="1" Text="Salida" Margin="5" HorizontalAlignment="Center" FontSize="12"/>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding EntradaJ, StringFormat={}{0:hh\\:mm}}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SalidaJ, StringFormat={}{0:hh\\:mm}}" HorizontalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- VIERNES: agrupa Entrada y Salida -->
                    <DataGridTemplateColumn MinWidth="120" Width="*">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="Viernes" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14"/>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Entrada" Margin="5" HorizontalAlignment="Center" FontSize="12"/>
                                        <TextBlock Grid.Column="1" Text="Salida" Margin="5" HorizontalAlignment="Center" FontSize="12"/>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding EntradaV, StringFormat={}{0:hh\\:mm}}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SalidaV, StringFormat={}{0:hh\\:mm}}" HorizontalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- SABADO: agrupa Entrada y Salida -->
                    <DataGridTemplateColumn MinWidth="120" Width="*">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="Sabado" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14"/>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Entrada" Margin="5" HorizontalAlignment="Center" FontSize="12"/>
                                        <TextBlock Grid.Column="1" Text="Salida" Margin="5" HorizontalAlignment="Center" FontSize="12"/>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding EntradaS, StringFormat={}{0:hh\\:mm}}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SalidaS, StringFormat={}{0:hh\\:mm}}" HorizontalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- DOMINGO: agrupa Entrada y Salida -->
                    <DataGridTemplateColumn MinWidth="120" Width="*">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="Domingo" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14"/>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Entrada" Margin="5" HorizontalAlignment="Center" FontSize="12"/>
                                        <TextBlock Grid.Column="1" Text="Salida" Margin="5" HorizontalAlignment="Center" FontSize="12"/>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding EntradaD, StringFormat={}{0:hh\\:mm}}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SalidaD, StringFormat={}{0:hh\\:mm}}" HorizontalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <!-- FOOTER: Total de Personal + Totales -->
        <Border Grid.Row="2"
                Background="{StaticResource Color1}"
                CornerRadius="10"
                Padding="10"
                Margin="10,10,10,10"
                Width="200"
                HorizontalAlignment="Left">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!-- 1) Total de Personal label + contador -->
                <TextBlock Text="Total de Personal"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"
                           FontSize="16"/>
                <!--Circulo-->
                <Border Grid.Column="1"
                        Background="{StaticResource primaryColor4}"
                        CornerRadius="5"
                        Padding="5"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0">
                    <TextBlock Text="-"
                               x:Name="TotalPersonal"
                               Foreground="{StaticResource titleColor4}"
                               FontWeight="Bold"
                               FontSize="16"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
