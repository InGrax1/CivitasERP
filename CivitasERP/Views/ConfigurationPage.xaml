<Page x:Class="CivitasERP.Views.ConfigurationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CivitasERP.Views"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900"
      Title="ConfigurationPage"
      Background="{StaticResource BackgroudColor}">

    <Grid>
        <Border Background="{StaticResource BackgroudColor}"
                BorderBrush="LightGray"
                BorderThickness="2"
                CornerRadius="10"
                Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Configuracion"
                           Grid.Row="0"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="{StaticResource titleColorA}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Especificaciones del programa"
                           Grid.Row="1"
                           FontSize="25"
                           FontWeight="Normal"
                           Margin="5"
                           Foreground="{StaticResource titleColor3}"
                           HorizontalAlignment="Center"/>
                <Grid Grid.Row="2" Margin="10" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!--Version-->
                    <Image Source="/Images/Info.png" 
                           Grid.Column="0" Grid.Row="0" 
                           Height="30" Width="30"
                           Margin="0,20,10,0"/>
                    <StackPanel Grid.Column="1" Grid.Row="0">
                        <TextBlock Text="Version" 
                                   FontWeight="Light"
                                   Foreground="Gray"
                                   FontSize="20"
                                   Margin="0,20,0,0"
                                   HorizontalAlignment="Left"/>
                        <TextBlock Text="CivitasERP vp1.2" FontWeight="SemiBold" Grid.Column="1" FontSize="25"/>
                    </StackPanel>

                    <!--Creadores-->
                    <Image Source="/Images/Group.png" 
                           Grid.Column="0" Grid.Row="1" 
                           Height="30" Width="30"
                           Margin="0,20,10,0"/>
                    <StackPanel Grid.Column="1" Grid.Row="1">
                        <TextBlock Text="Creadores" 
                                   FontWeight="Light"
                                   Foreground="Gray"
                                   Margin="0,20,0,0"
                                   FontSize="20"
                                   HorizontalAlignment="Left"/>
                        <TextBlock Text="InGrax1 / jesusnegrete135790" FontWeight="SemiBold" Grid.Column="1" FontSize="25"/>
                    </StackPanel>
                    
                    <!--Copyrigth-->
                    <Image Source="/Images/Copyright.png" 
                           Grid.Column="0" Grid.Row="2" 
                           Height="30" Width="30"
                           Margin="0,20,10,0"/>
                    <StackPanel Grid.Column="1" Grid.Row="2">
                        <TextBlock Text="Copyrigth" 
                                   FontWeight="Light"
                                   Foreground="Gray"
                                   Margin="0,20,0,0"
                                   FontSize="20"
                                   HorizontalAlignment="Left"/>
                        <TextBlock Text="© 2025 Consorcio Civil. Todos los derechos reservados" FontWeight="SemiBold" Grid.Column="1" FontSize="25"/>
                    </StackPanel>

                    <!--Descripcion-->
                    <Image Source="/Images/Description.png" 
                           Grid.Column="0" Grid.Row="3" 
                           Height="30" Width="30"
                           Margin="0,20,10,0"/>
                    <StackPanel Grid.Column="1" Grid.Row="3">
                        <TextBlock Text="Descripcion" 
                                   FontWeight="Light"
                                   Foreground="Gray"
                                   Margin="0,20,0,0"
                                   FontSize="20"
                                   HorizontalAlignment="Left"/>
                        <TextBlock Text="Sistema de gestion empresarial para la asistencia de empleados" FontWeight="SemiBold" Grid.Column="1" FontSize="25"/>
                    </StackPanel>


                </Grid>
            </Grid>
        </Border>

    </Grid>
</Page>
