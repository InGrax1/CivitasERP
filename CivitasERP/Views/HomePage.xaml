<Page x:Class="CivitasERP.Views.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="NominaPage"
        Width="1366" Height="768"
        xmlns:oxy="http://oxyplot.org/wpf"
        Background= "{StaticResource BackgroudColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!--Titulo-->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Bienvenido a CivitasERP"
                       FontSize="30"
                       FontWeight="Bold"
                       Margin="20,20,0,0"
                       HorizontalAlignment="Left"/>
            <TextBlock Text="Jueves, 09 de Julio de 2025 - 10:30 AM"
                       FontSize="20"
                       Margin="20,5,0,0"
                       HorizontalAlignment="Left"/>
        </StackPanel>

        <!--Resumen-->
        <Border Grid.Row="1" Margin="10"
                BorderThickness="2"
                BorderBrush="LightGray" 
                CornerRadius="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Resumen"
                           FontSize="20"
                           Margin="10,10,0,0"
                           HorizontalAlignment="Left"
                           Grid.Row="0"/>
                <!--Total Empleados-->
                <Border Background="#DBEAFE" 
                        CornerRadius="20" 
                        Height="120"
                        Margin="10"
                        Grid.Column="0"
                        Grid.Row="1">
                    <StackPanel>
                        <TextBlock Text="Total empleados activos"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Margin="10,10,0,0"
                                   HorizontalAlignment="Center"
                                   Foreground="#223E8C"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="0"
                                   x:Name="txtTotalEmpleados"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Margin="10,10,0,0"
                                   Foreground="#223E8C"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!--Total Nomina Semanal-->
                <Border Background="#DCFCE7" 
                        CornerRadius="20" 
                        Margin="10"
                        Height="120"
                        Grid.Column="1"
                        Grid.Row="1">
                    <StackPanel>
                        <TextBlock Text="Nomina (Semanal)"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Margin="10,10,0,0"
                                   HorizontalAlignment="Center"
                                   Foreground="#14532D"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="$0"
                                   x:Name="txtNominaSemanal"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Margin="10,10,0,0"
                                   Foreground="#14532D"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!--Total Horas Extra Acum.-->
                <Border Background="#FEF9C3" 
                        CornerRadius="20" 
                        Margin="10"
                        Height="120"
                        Grid.Column="2"
                        Grid.Row="1">
                    <StackPanel>
                        <TextBlock Text="Horas extra (Acumuladas)"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Margin="10,10,0,0"
                                   HorizontalAlignment="Center"
                                   Foreground="#724013"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="0"
                                   x:Name="txtHorasExtra"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Margin="10,10,0,0"
                                   Foreground="#724013"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!--Total Ausencias Recientes-->
                <Border Background="#FEE2E2" 
                        CornerRadius="20" 
                        Margin="10"
                        Height="120"
                        Grid.Column="3"
                        Grid.Row="1">
                    <StackPanel>
                        <TextBlock Text="Ausencias Recientes"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Margin="10,10,0,0"
                                   HorizontalAlignment="Center"
                                   Foreground="#AA3E3E"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="0"
                                   x:Name="txtAusencias"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Margin="10,10,0,0"
                                   Foreground="#AA3E3E"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
       
        <!--Graficas-->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--Empleados x obra-->
            <Border Grid.Column="0" Margin="10"
                    BorderThickness="2"
                    BorderBrush="LightGray" 
                    CornerRadius="20">
                <StackPanel Margin="10" Height="500">
                    <!--Grafica de Dona Empleados-->
                    <oxy:PlotView x:Name="piePlot"
                                  Height="350"
                                  Margin="10"/>
                </StackPanel>
                
                
            </Border>
            <!--Gastos Mensuales Nomina-->
            <Border Grid.Column="1" Margin="10"
                    BorderThickness="2"
                    BorderBrush="LightGray" 
                    CornerRadius="20">
                <StackPanel Margin="10" Height="500">
                    <!--Grafica de Gatos-->
                    
                </StackPanel>


            </Border>


            <!--Actividad reciente-->




        </Grid>
    </Grid>
</Page>
