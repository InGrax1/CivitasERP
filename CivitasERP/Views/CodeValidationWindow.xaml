<Window x:Class="CivitasERP.Views.CodeValidationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Registro de Nuevo Personal"
        Width="650" Height="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="DragWindow">

    <!-- WindowChrome para redondear esquinas y permitir resize nativo -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
        CaptionHeight="0"
        ResizeBorderThickness="5"
        CornerRadius="30"
        GlassFrameThickness="0"
        UseAeroCaptionButtons="True"/>
    </shell:WindowChrome.WindowChrome>

    <!-- Fondo blanco redondeado -->
    <Border Background="{StaticResource BackgroudColor}" 
            CornerRadius="30" 
            Padding="20" 
            Margin="10" 
            BorderThickness="3" 
            BorderBrush="{StaticResource primaryColor1}">
        <Grid>
            <!-- Defino filas: 0=Header,1=Titulo,2=subtitulo,3=text,4=btn -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="Auto"/>

            </Grid.RowDefinitions>
            <!-- Header -->
            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">

                    <Border Background="{StaticResource buttonExit}" CornerRadius="20">
                        <Button Style="{StaticResource RoundButton}" 
                                Background="{StaticResource buttonExit}" 
                                Content="×"
                                Click="btnExit_Click"/>
                    </Border>
                </StackPanel>
            </Grid>

            <!--Titulo-->
            <Grid Grid.Row="1" Margin="0,0,0,0">
                <TextBlock Text="INGRESA EL CODIGO DE VERIFICACION"
                           FontSize="24" FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource titleColorA}"/>
            </Grid>

            <Grid Grid.Row="2" Margin="0,10,0,0">
                <TextBlock Text="Si no haz recibido el código verifica en Spam o Correo no deseados"
                           FontSize="14"
                           FontWeight="Light"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource titleColor2}"/>
            </Grid>

            <!-- Formulario de campos -->
            <Grid Grid.Row="3" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Codigo -->
                <StackPanel Grid.Row="0" 
                            Grid.Column="1" 
                            Margin="10">
                    <TextBlock Text="Código de Verificación" 
                               Foreground="{StaticResource titleColorA}" 
                               FontSize="15" 
                               Margin="0,20,0,15"/>
                    <!-- Contenedor para los 6 cuadros del código -->
                    <Grid HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Cuadro 1 -->
                        <Border Grid.Column="0" 
                                Background="#F0F0F0" 
                                CornerRadius="10" 
                                Padding="0" 
                                Margin="5"
                                BorderThickness="2" 
                                BorderBrush="{StaticResource primaryColor1}"
                                Width="50" Height="50">
                            <TextBox x:Name="txtCodigo1" 
                                     BorderThickness="0" 
                                     Background="Transparent"
                                     FontSize="20"
                                     FontWeight="Bold"
                                     TextAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     MaxLength="1"
                                     PreviewTextInput="TextBox_PreviewTextInput"
                                     TextChanged="TextBox_TextChanged"
                                     PreviewKeyDown="TextBox_PreviewKeyDown"
                                     GotFocus="TextBox_GotFocus"/>
                        </Border>
                        
                        <!-- Cuadro 2 -->
                        <Border Grid.Column="1" 
                                Background="#F0F0F0" 
                                CornerRadius="10" 
                                Padding="0" 
                                Margin="5"
                                BorderThickness="2" 
                                BorderBrush="{StaticResource primaryColor3}"
                                Width="50" Height="50">
                            <TextBox x:Name="txtCodigo2" 
                                     BorderThickness="0" 
                                     Background="Transparent"
                                     FontSize="20"
                                     FontWeight="Bold"
                                     TextAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     MaxLength="1"
                                     PreviewTextInput="TextBox_PreviewTextInput"
                                     TextChanged="TextBox_TextChanged"
                                     PreviewKeyDown="TextBox_PreviewKeyDown"
                                     GotFocus="TextBox_GotFocus"/>
                        </Border>
                        
                        <!-- Cuadro 3 -->
                        <Border Grid.Column="2" 
                                Background="#F0F0F0" 
                                CornerRadius="10" 
                                Padding="0" 
                                Margin="5"
                                BorderThickness="2" 
                                BorderBrush="{StaticResource primaryColor3}"
                                Width="50" Height="50">
                            <TextBox x:Name="txtCodigo3" 
                                     BorderThickness="0" 
                                     Background="Transparent"
                                     FontSize="20"
                                     FontWeight="Bold"
                                     TextAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     MaxLength="1"
                                     PreviewTextInput="TextBox_PreviewTextInput"
                                     TextChanged="TextBox_TextChanged"
                                     PreviewKeyDown="TextBox_PreviewKeyDown"
                                     GotFocus="TextBox_GotFocus"/>
                        </Border>

                        <!-- Cuadro 4 -->
                        <Border Grid.Column="3" 
                                Background="#F0F0F0" 
                                CornerRadius="10" 
                                Padding="0" 
                                Margin="5"
                                BorderThickness="2" 
                                BorderBrush="{StaticResource primaryColor3}"
                                Width="50" Height="50">
                            <TextBox x:Name="txtCodigo4" 
                                     BorderThickness="0" 
                                     Background="Transparent"
                                     FontSize="20"
                                     FontWeight="Bold"
                                     TextAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     MaxLength="1"
                                     PreviewTextInput="TextBox_PreviewTextInput"
                                     TextChanged="TextBox_TextChanged"
                                     PreviewKeyDown="TextBox_PreviewKeyDown"
                                     GotFocus="TextBox_GotFocus"/>
                        </Border>

                        <!-- Cuadro 5 -->
                        <Border Grid.Column="4" 
                                Background="#F0F0F0" 
                                CornerRadius="10" 
                                Padding="0" 
                                Margin="5"
                                BorderThickness="2" 
                                BorderBrush="{StaticResource primaryColor3}"
                                Width="50" Height="50">
                            <TextBox x:Name="txtCodigo5" 
                                     BorderThickness="0" 
                                     Background="Transparent"
                                     FontSize="20"
                                     FontWeight="Bold"
                                     TextAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     MaxLength="1"
                                     PreviewTextInput="TextBox_PreviewTextInput"
                                     TextChanged="TextBox_TextChanged"
                                     PreviewKeyDown="TextBox_PreviewKeyDown"
                                     GotFocus="TextBox_GotFocus"/>
                        </Border>

                        <!-- Cuadro 6 -->
                        <Border Grid.Column="5" 
                                Background="#F0F0F0" 
                                CornerRadius="10" 
                                Padding="0" 
                                Margin="5"
                                BorderThickness="2" 
                                BorderBrush="{StaticResource primaryColor3}"
                                Width="50" Height="50">
                            <TextBox x:Name="txtCodigo6" 
                                     BorderThickness="0" 
                                     Background="Transparent"
                                     FontSize="20"
                                     FontWeight="Bold"
                                     TextAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     MaxLength="1"
                                     PreviewTextInput="TextBox_PreviewTextInput"
                                     TextChanged="TextBox_TextChanged"
                                     PreviewKeyDown="TextBox_PreviewKeyDown"
                                     GotFocus="TextBox_GotFocus"/>
                        </Border>
                    </Grid>
                </StackPanel>

                <!-- Botón Guardar -->
                <Button Style="{StaticResource LargeRoundButton}"
                        Grid.Row="3" 
                        HorizontalAlignment="Center"
                        Background="{StaticResource primaryColor1}"
                        Foreground="{StaticResource titleColor4}"
                        Width="200" Height="45"
                        Margin="0,20,0,0"
                        Content="Continuar"
                        FontSize="16"
                        Click="btnValidar_Click"/>

                <!-- Reenviar código -->
                <StackPanel Grid.Row="4" 
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0">
                    <TextBlock Text="¿No recibiste el código?"
                               FontSize="14"
                               FontWeight="Light"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource titleColor2}"/>
                    <Button Content="Reenviar Código"
                            Style="{StaticResource LargeRoundButton}"
                            Width="150" Height="45"
                            Background="{StaticResource primaryColor2}"
                            Foreground="{StaticResource titleColor2}"
                            Click="btnReenviarCodigo_Click"/>
                </StackPanel>
                
                <!-- Mensaje de cancelación -->
                    <TextBlock Grid.Row="5"
                           Text="Para cancelar el proceso cierra esta ventana con el boton ❌ "
                           FontSize="12"
                           FontWeight="Light"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"
                           Foreground="{StaticResource titleColor2}"/>
            </Grid>
        </Grid>
    </Border>
</Window>