<Window x:Class="CivitasERP.Views.RegisterPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Registro de Nuevo Personal"
        Width="670" Height="710"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="DragWindow">

    <!-- WindowChrome para redondear esquinas y permitir resize nativo -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
        CaptionHeight="0"
        ResizeBorderThickness="5"
        CornerRadius="30"
        GlassFrameThickness="0"
        UseAeroCaptionButtons="True"/>
    </shell:WindowChrome.WindowChrome>

    <!-- Fondo blanco redondeado -->
    <Border Background="{StaticResource BackgroudColor}" 
            CornerRadius="30" 
            Padding="20" 
            Margin="10" 
            BorderThickness="3" 
            BorderBrush="{StaticResource primaryColor1}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="47*"/>
                <ColumnDefinition Width="557*"/>
            </Grid.ColumnDefinitions>
            <!-- Defino filas: 0=Header,1=Formulario,2=Huella,3=Guardar,4=espacio -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <!-- Header -->
            <Grid Grid.Row="0" Grid.ColumnSpan="2">
                <TextBlock Text="REGISTRO DE NUEVO PERSONAL"
                           FontSize="24" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource titleColorB}"/>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">

                    <Button Style="{StaticResource RoundButton}"
                            Background="{StaticResource buttonMin}"
                            Content="—"
                            Click="btnMin_Click"
                            Margin="0,0,5,0"/>

                        <Button Style="{StaticResource RoundButton}" 
                                Background="{StaticResource buttonExit}" 
                                Content="×"
                                Click="btnExit_Click"
                                Margin="0,0,5,0"/>
                </StackPanel>
            </Grid>

            <!-- Formulario de campos -->
            <Grid Grid.Row="1" Margin="0,30,0,30" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Nombre / Usuario -->
                <StackPanel Grid.Row="0" 
                            Grid.Column="0" 
                            Margin="10">
                    <TextBlock Text="Nombre" 
                               Foreground="{StaticResource titleColorB}" 
                               FontSize="15" 
                               Margin="0,0,0,5"/>
                    <Border Background="{StaticResource primaryColor2}" 
                            CornerRadius="10" 
                            Padding="5"
                            BorderThickness="1"
                            BorderBrush="{StaticResource BoxColor1}">
                        <TextBox x:Name="txtNombre" 
                                 BorderThickness="0" 
                                 Background="Transparent"
                                 Foreground="{StaticResource titleColorA}"/>
                    </Border>
                </StackPanel>
                <StackPanel Grid.Row="0" 
                            Grid.Column="1" 
                            Margin="10">
                    <TextBlock Text="Usuario" 
                               Foreground="{StaticResource titleColorB}" 
                               FontSize="15" 
                               Margin="0,0,0,5"/>
                    <Border Background="{StaticResource primaryColor2}" 
                            CornerRadius="10" 
                            Padding="5"
                            BorderThickness="1"
                            BorderBrush="{StaticResource BoxColor1}">
                        <TextBox x:Name="txtUsuario" 
                                 BorderThickness="0" 
                                 Background="Transparent"
                                 Foreground="{StaticResource titleColorA}"/>
                    </Border>
                </StackPanel>

                <!-- Apellido Paterno / Contraseña -->
                <StackPanel Grid.Row="1" 
                            Grid.Column="0" 
                            Margin="10">
                    <TextBlock Text="Apellido Paterno" 
                               Foreground="{StaticResource titleColorB}" 
                               FontSize="15"
                               Margin="0,20,0,5"/>
                    <Border Background="{StaticResource primaryColor2}" 
                            CornerRadius="10" 
                            Padding="5"
                            BorderThickness="1"
                            BorderBrush="{StaticResource BoxColor1}">
                        <TextBox x:Name="txtApellidoPaterno" 
                                 BorderThickness="0" 
                                 Background="Transparent"
                                 Foreground="{StaticResource titleColorA}"/>
                    </Border>
                </StackPanel>
                <StackPanel Grid.Row="1" 
                            Grid.Column="1" 
                            Margin="10">
                    <TextBlock Text="Contraseña" 
                               Foreground="{StaticResource titleColorB}" 
                               FontSize="15"
                               Margin="0,20,0,5"/>
                    <Border Background="{StaticResource primaryColor2}" 
                            CornerRadius="10" 
                            Padding="5"
                            BorderThickness="1"
                            BorderBrush="{StaticResource BoxColor1}">
                        <PasswordBox x:Name="pwdPassword" 
                                     BorderThickness="0" 
                                     Background="Transparent"
                                     Foreground="{StaticResource titleColorA}"/>
                    </Border>
                </StackPanel>

                <!-- Apellido Materno / correo -->
                <StackPanel Grid.Row="2" 
                            Grid.Column="0" 
                            Margin="10">
                    <TextBlock Text="Apellido Materno" 
                               Foreground="{StaticResource titleColorB}" 
                               FontSize="15" 
                               Margin="0,20,0,5"/>
                    <Border Background="{StaticResource primaryColor2}" 
                            CornerRadius="10" 
                            Padding="5"
                            BorderThickness="1"
                            BorderBrush="{StaticResource BoxColor1}">
                        <TextBox x:Name="txtApellidoMaterno" 
                                 BorderThickness="0" 
                                 Background="Transparent"
                                 Foreground="{StaticResource titleColorA}"/>
                    </Border>
                </StackPanel>
                <StackPanel Grid.Row="2" 
                            Grid.Column="1" 
                            Margin="10">
                    <TextBlock Text="Correo" 
                               Foreground="{StaticResource titleColorB}" 
                               FontSize="14" 
                               Margin="0,20,0,5"/>
                    <Border Background="{StaticResource primaryColor2}" 
                            CornerRadius="10" 
                            Padding="5"
                            BorderThickness="1"
                            BorderBrush="{StaticResource BoxColor1}">
                        <TextBox x:Name="txtCorreo" 
                                 BorderThickness="0" 
                                 Background="Transparent"
                                 Foreground="{StaticResource titleColorA}"/>
                    </Border>
                </StackPanel>

                <!-- Categoria / Sueldo Semanal -->
                <StackPanel Grid.Row="3" 
                            Grid.Column="0" 
                            Margin="10">
                    <TextBlock Text="Categoria" 
                               Foreground="{StaticResource titleColorB}" 
                               FontSize="14" 
                               Margin="0,20,0,5"/>
                    <Border Background="{StaticResource primaryColor2}" 
                        CornerRadius="10" 
                        Padding="3"
                        BorderThickness="1"
                        BorderBrush="{StaticResource BoxColor1}">
                        <ComboBox x:Name="CmboCategoria" BorderThickness="0" Background="Transparent" Foreground="{StaticResource titleColorA}">
                            <ComboBoxItem Content="Superintendente" />
                            <ComboBoxItem Content="Director" />
                        </ComboBox>
                    </Border>
                </StackPanel>
                <StackPanel Grid.Row="3" 
                            Grid.Column="1" 
                            Margin="10">
                    <TextBlock Text="Sueldo Semanal" 
                               Foreground="{StaticResource titleColorB}" 
                               FontSize="14" 
                               Margin="0,20,0,5"/>
                    <Border Background="{StaticResource primaryColor2}" 
                            CornerRadius="10" 
                            Padding="5"
                            BorderThickness="1"
                            BorderBrush="{StaticResource BoxColor1}">
                        <TextBox x:Name="txtSueldo" BorderThickness="0" Background="Transparent" Foreground="{StaticResource titleColorA}"/>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Botón Huella -->
            <Button Grid.Row="2"
                    HorizontalAlignment="Left"
                    Margin="157,10,0,10"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="btnHuellaR_Click" Grid.Column="1">
                <StackPanel>
                    <TextBlock x:Name="EstadoHuella"
                               Text="Click para iniciar el escaneo"
                               Foreground="{StaticResource titleColorA}"
                               FontSize="15"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <Image Source="/Images/huella-dactilar.png"
                           Width="90"
                           Height="90"
                           HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Button>

            <!-- Botón Guardar -->
            <Button Grid.Row="3" 
                    Content="Guardar"
                    Width="150" 
                    Height="40"
                    HorizontalAlignment="Right" 
                    Margin="0,20,10,0"
                    Background="{StaticResource buttonColor1}" 
                    Foreground="{StaticResource titleColor4}"
                    FontSize="16" FontWeight="Bold"
                    BorderThickness="0"
                    Click="btnRegister_Click" Grid.Column="1">
                <Button.Effect>
                    <DropShadowEffect Color="#5F5FFF" BlurRadius="10" ShadowDepth="0"/>
                </Button.Effect>
            </Button>
        </Grid>
    </Border>
</Window>