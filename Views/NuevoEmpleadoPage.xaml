<Window x:Class="CivitasERP.Views.NuevoEmpleadoPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Registro de Nuevo Personal"
        Width="820" Height="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="DragWindow">

    <!-- WindowChrome para redondear esquinas y permitir resize nativo -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
        CaptionHeight="0"
        ResizeBorderThickness="5"
        CornerRadius="30"
        GlassFrameThickness="0"
        UseAeroCaptionButtons="True"/>
    </shell:WindowChrome.WindowChrome>

    <!-- Fondo blanco redondeado -->
    <Border Background="White" CornerRadius="30" Padding="20" Margin="10" BorderThickness="3" BorderBrush="#5F5FFF">
        <Grid>
            <!-- Defino filas: 0=Header,1=Formulario,2=Huella,3=Guardar,4=espacio -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <!-- Header -->
            <Grid Grid.Row="0">
                <TextBlock Text="REGISTRO DE NUEVO PERSONAL"
                   FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Foreground="#6370FF"/>
                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">

                    <Button Style="{StaticResource RoundButton}"
                            Background="LightBlue"
                            Content="—"
                            Click="btnMin_Click"
                            Margin="0,0,5,0"/>

                    <Border Background="LightCoral" CornerRadius="20">
                        <Button Style="{StaticResource RoundButton}" Background="LightCoral" Content="×"
                                Click="btnExit_Click"/>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Formulario de campos -->
            <Grid Grid.Row="1" Margin="0,30,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="251*" />
                    <ColumnDefinition Width="224*" />
                    <ColumnDefinition Width="27*"/>
                    <ColumnDefinition Width="251*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Nombre-->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="10,10,10,10">
                    <TextBlock Text="Nombre" Foreground="#5F5FFF" FontSize="15" Margin="0,0,0,5"/>
                    <Border Background="#F0F0F0" CornerRadius="10" Padding="5">
                        <TextBox x:Name="txtNombre" BorderThickness="0" Background="Transparent"/>
                    </Border>
                </StackPanel>


                <!-- Apellido Paterno-->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,10,10,10">
                    <TextBlock Text="Apellido Paterno" Foreground="#5F5FFF" FontSize="15" Margin="0,0,0,5"/>
                    <Border Background="#F0F0F0" CornerRadius="10" Padding="5">
                        <TextBox x:Name="txtApellidoPaterno" BorderThickness="0" Background="Transparent"/>
                    </Border>
                </StackPanel>


                <!-- Apellido Materno -->
                <StackPanel Grid.Row="0" Grid.Column="3" Margin="10,10,10,10">
                    <TextBlock Text="Apellido Materno" Foreground="#5F5FFF" FontSize="15" Margin="0,0,0,5"/>
                    <Border Background="#F0F0F0" CornerRadius="10" Padding="5">
                        <TextBox x:Name="txtApellidoMaterno" BorderThickness="0" Background="Transparent"/>
                    </Border>
                </StackPanel>

                <!--Categoria-->
                <StackPanel Grid.Row="2" Grid.Column="0" Margin="10,10,10,10">
                    <TextBlock Text="Categoria" Foreground="#5F5FFF" FontSize="15" Margin="0,20,0,5"/>
                    <Border Background="#F0F0F0" CornerRadius="10" Padding="5">
                        <TextBox x:Name="txtCategoria" BorderThickness="0" Background="Transparent"/>
                    </Border>
                </StackPanel>
                
                <!--Obra-->
                <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,10,10,10">
                    <TextBlock Text="Obra" Foreground="#5F5FFF" FontSize="15" Margin="0,20,0,5"/>
                    <Border Background="#F0F0F0" CornerRadius="10" Padding="5">
                        <ComboBox x:Name="txtObra" BorderThickness="0" Background="Transparent"/>
                    </Border>
                </StackPanel>

                <!-- Sueldo Semanal -->
                <StackPanel Grid.Row="2" Grid.Column="2" Margin="10,10,10,10" Grid.ColumnSpan="2">
                    <TextBlock Text="Sueldo Semanal" Foreground="#5F5FFF" FontSize="14" Margin="0,20,0,5"/>
                    <Border Background="#5F5FFF" CornerRadius="10" Padding="5">
                        <TextBox x:Name="txtSueldo" BorderThickness="0" Background="Transparent" Foreground="White"/>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Botón Huella -->
            <Button Grid.Row="2"
              HorizontalAlignment="Center" Margin="0,10"
              Background="Transparent" BorderThickness="0">
                <StackPanel>
                    <TextBlock Text="Huella" Foreground="#5F5FFF" FontSize="14" HorizontalAlignment="Center"/>
                    <Button Width="100" Height="100" Click="btnHuellaR_Click" Background="Transparent" BorderBrush="Transparent">
                        <Image Source="/Images/huella-dactilar.png" Width="90" Height="90"/>
                    </Button>
                </StackPanel>
            </Button>

            <!-- Botón Guardar -->
            <Button Grid.Row="3" Content="Guardar"
              Width="150" Height="40"
              HorizontalAlignment="Right" Margin="0,20,10,0"
              Background="#5F5FFF" Foreground="White"
              FontSize="16" FontWeight="Bold"
              BorderThickness="0"
              Click="btnRegister_Click">
                <Button.Effect>
                    <DropShadowEffect Color="#5F5FFF" BlurRadius="10" ShadowDepth="0"/>
                </Button.Effect>
            </Button>
        </Grid>
    </Border>
</Window>