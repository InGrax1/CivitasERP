<Page x:Class="CivitasERP.Views.NominaPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="NominaPage"
        Width="1800" Height="1000">


        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <!-- CONTENIDO CENTRAL -->
            <Border Grid.Column="1" Panel.ZIndex="1"
                CornerRadius="0,0,0,0" Background="White" Margin="0">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions> 

                    <!-- FILTROS -->
                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Título -->
                        <TextBlock Grid.Column="0" Grid.ColumnSpan="5"
                               Text="LISTA DE PERSONAL Y NÓMINA"
                               FontSize="26" FontWeight="Bold"
                               Margin="0,0,0,20"/>

                        <!-- Obra -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Obra" FontSize="16"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>

                        <Border Grid.Row="1" Grid.Column="1"
                                Background="White" 
                                CornerRadius="10"
                                BorderBrush="#6666FF" 
                                BorderThickness="1"
                                Height="30"
                                Padding="3">
                            <ComboBox x:Name="ObraComboBox"
                                      Background="Transparent"
                                      BorderBrush="Transparent"
                                      BorderThickness="0"
                                      FontSize="14"
                                      VerticalContentAlignment="Center"
                                      Padding="5"
                                      IsEditable="True"
                                      IsReadOnly="False" DropDownOpened="ObraComboBox_DropDownOpened" SelectionChanged="ObraComboBox_SelectionChanged"/>
                        </Border>

                        <!-- Periodo -->
                        <TextBlock Grid.Row="1" Grid.Column="2"
                               Text="Periodo" FontSize="16"
                               VerticalAlignment="Center"
                               Margin="20,0,10,0"/>
                        <StackPanel Grid.Row="1" Grid.Column="3"
                                Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Background="#6666FF" CornerRadius="5"
                                Width="80" Height="30" Margin="0,0,5,0">
                                <TextBlock x:Name="Fecha1" Text="Fecha 1"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="al" VerticalAlignment="Center" Margin="5,0"/>
                            <Border Background="#6666FF" CornerRadius="5"
                                Width="80" Height="30" Margin="5,0,0,0">
                                <TextBlock x:Name="Fecha2" Text="Fecha 2"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <!-- Combos Mes + Año (ambos dentro de un StackPanel) -->
                        <StackPanel Grid.Row="1" Grid.Column="4"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0">
                            <!-- Combo Mes -->
                            <Border Background="White"
                                    CornerRadius="5"
                                    BorderBrush="#6666FF"
                                    Width="150"
                                    Height="30"
                                    BorderThickness="2"
                                    Padding="1"
                                    Margin="0,0,15,0">
                                <ComboBox x:Name="ComBoxMes"
                                          Background="White"
                                          BorderBrush="Transparent"
                                          BorderThickness="0"
                                          FontSize="14"                             
                                          Foreground="DarkBlue"
                                          FontWeight="Normal"
                                          HorizontalContentAlignment="Center"
                                          VerticalContentAlignment="Center"
                                          DropDownOpened="ComBoxMes_DropDownOpened"
                                          SelectionChanged="ComBoxMes_SelectionChanged"/>
                            </Border>

                            <!-- Combo Año -->
                            <Border Background="White"
                                    CornerRadius="5"
                                    BorderBrush="#6666FF"
                                    Width="150"
                                    Height="30"
                                    BorderThickness="2"
                                    Padding="1"
                                    Margin="0,0,15,0">
                                <ComboBox x:Name="ComBoxAnio"
                                          Background="White"
                                          BorderBrush="Transparent"
                                          BorderThickness="0"
                                          FontSize="14"
                                          Foreground="DarkBlue"
                                          FontWeight="Normal"
                                          HorizontalContentAlignment="Center"
                                          VerticalContentAlignment="Center"
                                          DropDownOpened="ComBoxAnio_DropDownOpened"
                                          SelectionChanged="ComBoxAnio_SelectionChanged"/>
                            </Border>
                        </StackPanel>


                        <!-- Semana -->
                        <Border Grid.Row="1" Grid.Column="5"
                                Background="#6666FF" CornerRadius="5"
                                Width="auto" Height="30"
                                HorizontalAlignment="Center">
                            <Button x:Name="btnNuevoEmpleado"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Click="btnNuevoEmpleado_Click" 
                                    HorizontalAlignment="Right" 
                                    Width="150"
                                    HorizontalContentAlignment="Center">
                                + Agregar Nuevo Personal
                            </Button>
                        </Border>

                        <!-- Ubicación -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Ubicación"
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   Margin="0,20,10,0"/>

                        <Border Grid.Row="2" Grid.Column="1"
                                Background="White"
                                CornerRadius="10"
                                BorderBrush="#6666FF"
                                BorderThickness="1"
                                Height="30"
                                Margin="0,20,0,0">
                            <Label x:Name="UbicacionLabel"
                                   Content="Ubicación . . ."
                                   Background="Transparent"
                                   Padding="5"
                                   Foreground="Black"
                                   VerticalContentAlignment="Center"/>
                        </Border>

                    </Grid>

                    <!-- DATA GRID -->
                    <Border Grid.Row="2" CornerRadius="20"
                        Background="#E5E5E5" Margin="0,0,0,0">
                        <DataGrid x:Name="dataGridNomina"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              Margin="10"
                              HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Binding="{Binding ID}" />
                                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" />
                                <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria}" />
                                <DataGridTextColumn Header="Días Trabajados" Binding="{Binding DiasTrabajados}" />
                                <DataGridTextColumn Header="Días" Binding="{Binding Dias}" />
                                <DataGridTextColumn Header="Sueldo Jornada" Binding="{Binding SueldoJornada}" />
                                <DataGridTextColumn Header="Sueldo Semanal" Binding="{Binding SueldoSemanal}" />
                                <DataGridTextColumn Header="Horas Extra" Binding="{Binding HorasExtra}" />
                                <DataGridTextColumn Header="Precio Hora Extra" Binding="{Binding PHoraExtra}" />
                                <DataGridTextColumn Header="Sueldo Extra" Binding="{Binding SuelExtra}" />
                                <DataGridTextColumn Header="Sueldo Trabajado" Binding="{Binding SuelTrabajado}" />
                                <DataGridTextColumn Header="Sueldo Total" Binding="{Binding SuelTotal}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
</Page>
