<Page x:Class="CivitasERP.Views.NominaPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="NominaPage"
        MinHeight="800" MinWidth="600">

    <Grid>
        <!-- CONTENIDO CENTRAL -->
            <Border Grid.Column="1" 
                    Panel.ZIndex="1"
                    Background="White" 
                    Margin="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="1"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled"
                              Margin="0,0,0,20">
                    <!-- FILTROS -->
                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Título -->
                        <TextBlock Grid.Column="0" Grid.ColumnSpan="5"
                                   Text="LISTA DE PERSONAL Y NÓMINA"
                                   FontSize="26" FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <!-- Obra -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Obra" FontSize="16"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>

                        <Border Grid.Row="1" Grid.Column="1"
                                Background="White" 
                                CornerRadius="10"
                                BorderBrush="#6666FF" 
                                BorderThickness="1"
                                MinHeight="30"
                                MinWidth="80"
                                Padding="3">
                            <ComboBox x:Name="ObraComboBox"
                                      Background="Transparent"
                                      BorderBrush="Transparent"
                                      BorderThickness="0"
                                      FontSize="14"
                                      VerticalContentAlignment="Stretch"
                                      Padding="5"
                                      IsEditable="False"
                                      IsReadOnly="False" 
                                      DropDownOpened="ObraComboBox_DropDownOpened" 
                                      SelectionChanged="ObraComboBox_SelectionChanged"/>
                        </Border>

                        <!-- Periodo -->
                        <StackPanel Grid.Row="1" Grid.Column="2"
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center">
                            <TextBlock Text="Periodo" 
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       Margin="20,0,10,0"/>
                            <Border Background="#6666FF" 
                                    CornerRadius="5"
                                    MinHeight="30"
                                    MinWidth="80" 
                                    Margin="0,0,5,0">
                                <TextBlock x:Name="Fecha1" 
                                           Text="Fecha 1"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <TextBlock Text="al" 
                                       VerticalAlignment="Center" 
                                       Margin="5,0"/>
                            <Border Background="#6666FF" 
                                    CornerRadius="5" 
                                    MinHeight="30"
                                    MinWidth="80"
                                    Margin="5,0,0,0">
                                <TextBlock x:Name="Fecha2" 
                                           Text="Fecha 2"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <!-- Combos Mes + Año (ambos dentro de un StackPanel) -->
                        <StackPanel Grid.Row="1" Grid.Column="3"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0">


                            <!-- Combo Semana -->
                            <TextBlock Text="Semana"
            FontSize="16"
            VerticalAlignment="Center"
            HorizontalAlignment="Stretch"
            Margin="0,00,10,0"/>
                            <Border Background="White"
         CornerRadius="5"
         BorderBrush="#6666FF"
         MinHeight="30"
         MinWidth="80"
         BorderThickness="2"
         Padding="1"
         Margin="0,0,15,0">
                                <ComboBox x:Name="ComBoxSemana"
               Background="White"
               BorderBrush="Transparent"
               BorderThickness="0"
               FontSize="14"                             
               Foreground="DarkBlue"
               FontWeight="Normal"
               HorizontalContentAlignment="Stretch"
               VerticalContentAlignment="Center"
               DropDownOpened="ComBoxSemana_DropDownOpened"
               SelectionChanged="ComBoxSemana_SelectionChanged"/>
                            </Border>

                            <!-- Combo Mes -->
                            <TextBlock Text="Mes"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Stretch"
                                       Margin="0,0,10,0"/>
                            <Border Background="White"
                                    CornerRadius="5"
                                    BorderBrush="#6666FF"
                                    MinHeight="30"
                                    MinWidth="80"
                                    BorderThickness="2"
                                    Padding="1"
                                    Margin="0,0,15,0">
                                <ComboBox x:Name="ComBoxMes"
                                          Background="White"
                                          BorderBrush="Transparent"
                                          BorderThickness="0"
                                          FontSize="14"                             
                                          Foreground="DarkBlue"
                                          FontWeight="Normal"
                                          HorizontalContentAlignment="Stretch"
                                          VerticalContentAlignment="Center"
                                          DropDownOpened="ComBoxMes_DropDownOpened"
                                          SelectionChanged="ComBoxMes_SelectionChanged"/>
                            </Border>

                            <!-- Combo Año -->
                            <TextBlock Text="Año"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Stretch"
                                       Margin="0,0,10,0"/>
                            <Border Background="White"
                                    CornerRadius="5"
                                    BorderBrush="#6666FF"
                                    MinHeight="30"
                                    MinWidth="80"
                                    BorderThickness="2"
                                    Padding="1"
                                    Margin="0,0,15,0">
                                <ComboBox x:Name="ComBoxAnio"
                                          Background="White"
                                          BorderBrush="Transparent"
                                          BorderThickness="0"
                                          FontSize="14"
                                          Foreground="DarkBlue"
                                          FontWeight="Normal"
                                          HorizontalContentAlignment="Stretch"
                                          VerticalContentAlignment="Center"
                                          DropDownOpened="ComBoxAnio_DropDownOpened"
                                          SelectionChanged="ComBoxAnio_SelectionChanged"/>
                            </Border>
                        </StackPanel>


                        <!-- Agregar Nuevo Empleado -->
                        <Border Grid.Row="1" Grid.Column="4"
                                Background="#6666FF" 
                                CornerRadius="5"
                                Width="auto" 
                                MinHeight="30"
                                MinWidth="80"
                                HorizontalAlignment="Center">
                            <Button x:Name="btnNuevoEmpleado"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Click="btnNuevoEmpleado_Click" 
                                    HorizontalAlignment="Stretch" 
                                    Width="150"
                                    HorizontalContentAlignment="Center">
                                + Agregar Nuevo Personal
                            </Button>
                        </Border>

                        <!-- Ubicación -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Ubicación"
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   Margin="0,20,10,0"/>

                        <Border Grid.Row="2" Grid.Column="1"
                                Background="White"
                                CornerRadius="10"
                                BorderBrush="#6666FF"
                                BorderThickness="1"
                                Height="30"
                                Margin="0,20,0,0">
                            <Label x:Name="UbicacionLabel"
                                   Content="Ubicación . . ."
                                   Background="Transparent"
                                   Padding="5"
                                   Foreground="Black"
                                   VerticalContentAlignment="Center"/>
                        </Border>
                    </Grid>
                </ScrollViewer>
                    
                <!-- DATA GRID -->
                <Border Grid.Row="2" 
                            CornerRadius="20"
                            Background="#E5E5E5">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <DataGrid x:Name="dataGridNomina"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  Margin="10"
                                  HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Binding="{Binding ID}" />
                                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" />
                                <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria}" />
                                <DataGridTextColumn Header="Días Trabajados" Binding="{Binding DiasTrabajados}" />
                                <DataGridTextColumn Header="Días" Binding="{Binding Dias}" />
                                <DataGridTextColumn Header="Sueldo Jornada" Binding="{Binding SueldoJornada}" />
                                <DataGridTextColumn Header="Sueldo Semanal" Binding="{Binding SueldoSemanal}" />
                                <DataGridTextColumn Header="Horas Extra" Binding="{Binding HorasExtra}" />
                                <DataGridTextColumn Header="Precio Hora Extra" Binding="{Binding PHoraExtra}" />
                                <DataGridTextColumn Header="Sueldo Extra" Binding="{Binding SuelExtra}" />
                                <DataGridTextColumn Header="Sueldo Trabajado" Binding="{Binding SuelTrabajado}" />
                                <DataGridTextColumn Header="Sueldo Total" Binding="{Binding SuelTotal}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </Border>
                </Grid>
            </Border>
        </Grid>
</Page>
