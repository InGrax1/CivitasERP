<Window x:Class="CivitasERP.Views.RegisterPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CivitasERP.Views"
        mc:Ignorable="d"
        Title="RegisterPage" Height="514" Width="800">
    <!-- Contenedor -->
    <Grid Margin="20">
        <StackPanel>

            <!-- ===================== -->
            <!-- Campo: Nombre -->
            <!-- ===================== -->
            <TextBlock Text="Nombre"
                   FontFamily="Montserrat"
                   FontSize="12"
                   FontWeight="Medium"
                   Margin="0,10,0,2"/>
            <TextBox x:Name="txtNombre"
                 Height="30"
                 FontSize="12"
                 Padding="5"/>

            <!-- ===================== -->
            <!-- Campo: Apellido Paterno -->
            <!-- ===================== -->
            <TextBlock Text="Apellido Paterno"
                   FontFamily="Montserrat"
                   FontSize="12"
                   FontWeight="Medium"
                   Margin="0,10,0,2"/>
            <TextBox x:Name="txtApellidoPaterno"
                 Height="30"
                 FontSize="12"
                 Padding="5"/>

            <!-- ===================== -->
            <!-- Campo: Apellido Materno -->
            <!-- ===================== -->
            <TextBlock Text="Apellido Materno"
                   FontFamily="Montserrat"
                   FontSize="12"
                   FontWeight="Medium"
                   Margin="0,10,0,2"/>
            <TextBox x:Name="txtApellidoMaterno"
                 Height="30"
                 FontSize="12"
                 Padding="5"/>

            <!-- ===================== -->
            <!-- Campo: Usuario -->
            <!-- ===================== -->
            <TextBlock Text="Usuario"
                   FontFamily="Montserrat"
                   FontSize="12"
                   FontWeight="Medium"
                   Margin="0,10,0,2"/>
            <TextBox x:Name="txtUsuario"
                 Height="30"
                 FontSize="12"
                 Padding="5"/>

            <!-- ===================== -->
            <!-- Campo: Correo Electrónico -->
            <!-- ===================== -->
            <TextBlock Text="Correo Electrónico"
                   FontFamily="Montserrat"
                   FontSize="12"
                   FontWeight="Medium"
                   Margin="0,10,0,2"/>
            <TextBox x:Name="txtCorreo"
                 Height="30"
                 FontSize="12"
                 Padding="5"/>

            <!-- ===================== -->
            <!-- Campo: Contraseña -->
            <!-- ===================== -->
            <TextBlock Text="Contraseña"
                   FontFamily="Montserrat"
                   FontSize="12"
                   FontWeight="Medium"
                   Margin="0,10,0,2"/>
            <PasswordBox x:Name="pwdPassword"
                     Height="30"
                     FontSize="12"
                     Padding="5"/>

            <!-- ===================== -->
            <!-- Botón: Registrar -->
            <!-- ===================== -->
            <Button x:Name="btnRegister"
                Content="Registrar"
                Height="35"
                Margin="0,20,0,0"
                FontWeight="Bold"
                Background="#007ACC"
                Foreground="White"/>
            <Button x:Name="btnRegresar"
                Content="Regresar"
                Height="35"
                Margin="0,20,0,0"
                FontWeight="Bold"
                Background="#007ACC"
                Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
