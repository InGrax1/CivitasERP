<Window x:Class="CivitasERP.Views.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CivitasERP.Views"

        Title="Login" Height="550" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="DragWindow">
    
    <Window.Resources>
        <Style x:Key="RoundButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">        
                            <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- estilo para el  hover TextBox/PasswordBox -->
        <Style x:Key="FocusedBorder" TargetType="Border">
            <Setter Property="BorderBrush"    Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background"      Value="Transparent"/>
            <Style.Triggers>
                <!-- Cuando el Border o cualquiera de sus hijos tenga el foco de teclado -->
                <DataTrigger Binding="{Binding IsKeyboardFocusWithin, RelativeSource={RelativeSource Self}}"
                     Value="True">
                    <!-- Cambia a tu color y grosor de foco -->
                    <Setter Property="BorderBrush"    Value="#5F5FFF"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>


    <Border Background="#FF1B133E" CornerRadius="20" BorderBrush="#FF8A2BE2" BorderThickness="3" Padding="0" >
        <Grid Margin="-1,7,1,-7">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- 1) Barra superior -->
            <Grid Grid.Row="0">
                <!-- Texto LOGIN a la izquierda -->
                <TextBlock Text="LOGIN"
                   Foreground="#33FFFFFF"
                   FontSize="12"
                   VerticalAlignment="Center"
                   Margin="15,0,0,0"/>

                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="420,0,15,0">
                    <!-- Minimizar -->
                    <Button Width="30" Height="30"
                      Style="{StaticResource RoundButton}"
                      Background="#FF2EA8E6"
                      Content="—"
                      Click="btnMinimizar_Click"
                            Foreground="White"
                            BorderThickness="0"/>
                    <!-- Cerrar -->
                    <Button Width="30" Height="30"
                      Style="{StaticResource RoundButton}"
                      Background="#FFB22222"
                      Content="×"
                      Click="btnCerrar_Click"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="20"/>
                </StackPanel>
            </Grid>

            <!-- 2) Contenido Central-->
            <StackPanel Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Width="350"
                        Margin="0,20,0,0">
                <!--Logo-->
                <Image Source="/Images/LOGO CONSORCIO CIVIL 2.png" 
                       Grid.Row="0"
                       Width="204" Height="104" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Top"
                       Margin="0,0,0,17"/>  
                <!--Titulo Programa-->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="CivitasERP"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,0"/>  
                <!--Subtitulo Empresa-->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="CONSORCIO CIVIL"
                           Foreground="White"
                           FontSize="10"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,0"/>
            </StackPanel>

            <!-- 3) Formulario de Login -->
            <StackPanel Grid.Row="2">
                <!--Formulario-->
                <Grid HorizontalAlignment="Center"
                      Margin="0,40,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!--Usuario-->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Usuario:"
                               Foreground="White"
                               FontSize="12"
                               HorizontalAlignment="Left"
                               Margin="0,-10,0,0"/>
                    <Border Grid.Row="0" Grid.Column="0"
                            Grid.RowSpan="2"
                            HorizontalAlignment="Center"
                            CornerRadius="10"
                            Margin="0,5,0,0"
                            Style="{StaticResource FocusedBorder}">
                        <TextBox x:Name="txtUsuario"
                                   Width="250" Height="25"
                                   Background="Transparent"
                                   Foreground="White"
                                   BorderThickness="0"
                                   Padding="10,0"
                                   VerticalContentAlignment="Center"/>
                    </Border>
                    <!--Contraseña-->
                    <TextBlock  Grid.Row="2" Grid.Column="0"
                               Text="Contraseña:"
                               Foreground="White"
                               FontSize="12"
                               HorizontalAlignment="Left"
                               Margin="0,20,0,0"/>
                    <Border Grid.Row="2" Grid.Column="0"
                            Grid.RowSpan="2"
                            HorizontalAlignment="Center"
                            CornerRadius="10"
                            Margin="0,35,0,0"
                            Style="{StaticResource FocusedBorder}">
                        <PasswordBox x:Name="txtPassword"
                                     Width="250" Height="25"
                                     Background="Transparent"
                                     Foreground="White"
                                     BorderThickness="0"
                                     Padding="10,0"
                                     VerticalContentAlignment="Center"/>
                    </Border>

                </Grid>

                <!--Boton de Ingreso-->
                <StackPanel HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Border CornerRadius="10"
                            Background="Red"
                            Width="150" Height="25"
                            HorizontalAlignment="Center">
                        <Button x:Name="btnLogin"
                                Foreground="White"
                                BorderBrush="Transparent"
                                Background="Transparent"
                                FontSize="12"
                                FontWeight="Bold"
                                Width="150"
                                Height="25"
                                Cursor="Hand"
                                Click="btnLogin_Click">
                            
                            <!-- Estilo de Botón Hover -->
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Bd"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="10"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <!-- Hover -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#FFAA1E2D"/>
                                        </Trigger>
                                        <!-- Pressed -->
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#FF771A21"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            Ingresar
                        </Button>
                    </Border>

                    <!--Boton de Olvido Contraseña-->
                    <TextBlock HorizontalAlignment="Center" 
                               Margin="0,20,0,0" 
                               FontSize="10">
                        <Run Foreground="WhiteSmoke" Text="¿Olvidaste tu contraseña? "/>      
                        <Hyperlink Click="brnResetPassword"
                                   Foreground="White"
                                   TextDecorations="Underline"
                                   Cursor="Hand"
                                   FontWeight="Bold">
                          Reiniciar
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>