<Window x:Class="CivitasERP.Views.ForgotPasswordPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Registro de Nuevo Personal"
        Width="670" Height="610"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="DragWindow">

    <!-- WindowChrome para redondear esquinas y permitir resize nativo -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
        CaptionHeight="0"
        ResizeBorderThickness="5"
        CornerRadius="30"
        GlassFrameThickness="0"
        UseAeroCaptionButtons="True"/>
    </shell:WindowChrome.WindowChrome>

    <!-- Fondo blanco redondeado -->
    <Border Background="White" CornerRadius="30" Padding="20" Margin="10" BorderThickness="3" BorderBrush="#5F5FFF">
        <Grid>
            <!-- Defino filas: 0=Header,1=Titulo,2=Formulario,3=Guardar,4=espacio -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Header -->
            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">

                    <Border Background="LightCoral" CornerRadius="20">
                        <Button Style="{StaticResource RoundButton}" 
                                Background="LightCoral" 
                                Content="×"
                                Click="btnExit_Click"/>
                    </Border>
                </StackPanel>
            </Grid>
            
            <!--Titulo-->
            <Grid Grid.Row="1" Margin="0,0,0,0">
                <TextBlock Text="OLVIDASTE TU CONTRASEÑA?"
                           FontSize="24" FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Foreground="Blue"/>
            </Grid>
            <Grid Grid.Row="2" Margin="0,10,0,0">
                <TextBlock Text="Ingresa tu correo para recibir un código de verificación."
                           FontSize="15"
                           HorizontalAlignment="Center"
                           Foreground="DarkBlue"/>
            </Grid>
            <Grid Grid.Row="3" Margin="0,10,0,0">
                <TextBlock Text="Recibirás un correo con un código de verificación para restablecer tu contraseña."
                           FontSize="14"
                           FontWeight="Light"
                           HorizontalAlignment="Center"
                           Foreground="DarkBlue"/>
            </Grid>

            <!-- Formulario de campos -->
            <Grid Grid.Row="4" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Usuario -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
                    <TextBlock Text="Usuario" Foreground="#5F5FFF" FontSize="15" Margin="0,20,0,5"/>
                    <Border Background="#F0F0F0" CornerRadius="10" Padding="5" BorderThickness="0.3" BorderBrush="Black">
                        <TextBox x:Name="txtUsuario" BorderThickness="0" Background="Transparent"/>
                    </Border>
                </StackPanel>

                <!-- Correo -->
                <StackPanel Grid.Row="2" Grid.Column="1" Margin="10">
                    <TextBlock Text="Correo" Foreground="#5F5FFF" FontSize="15" Margin="0,20,0,5"/>
                    <Border Background="#F0F0F0" CornerRadius="10" Padding="5" BorderThickness="0.3" BorderBrush="Black">
                        <TextBox x:Name="txtCorreo" BorderThickness="0" Background="Transparent"/>
                    </Border>
                </StackPanel>
                
            </Grid>

            <!-- Botón Guardar -->
                <Button Style="{StaticResource LargeRoundButton}"
                        Grid.Row="5" 
                        HorizontalAlignment="Center"
                        Background="#5F5FFF"
                        Foreground="White"
                        Width="200" Height="40"
                        Margin="0,20,0,0"
                        Content="Enviar Código"
                        FontSize="16"
                        Click="btnEnviarCodigo_Click"/>

            <!--Boton de Olvido Contraseña-->
            <TextBlock Grid.Row="6"
                HorizontalAlignment="Center" 
                       Margin="0,20,0,0" 
                       FontSize="14">       
                <Run Foreground="Blue" Text="Regresa al"/>      
                <Hyperlink Click="brnBackLogin_Click"
                           Foreground="Blue"
                           TextDecorations="Underline"
                           Cursor="Hand"
                           FontWeight="Bold">       
                           Login
                </Hyperlink>
            </TextBlock>
        </Grid>
    </Border>
</Window>