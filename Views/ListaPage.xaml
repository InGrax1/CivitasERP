<Page x:Class="CivitasERP.Views.ListaPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="NominaPage"
        Width="1800" Height="1000">

        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- CONTENIDO CENTRAL -->
            <Border Grid.Column="1" Panel.ZIndex="1"
                CornerRadius="0,30,30,0" Background="White" Margin="0">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- FILTROS -->
                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Título -->
                        <TextBlock Grid.Column="0" Grid.ColumnSpan="5"
                               Text="LISTA DE PERSONAL Y PASE DE LISTA"
                               FontSize="26" FontWeight="Bold"
                               Margin="0,0,0,20"/>

                        <!-- Obra -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Obra" FontSize="16"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>

                        <Border Grid.Row="1" Grid.Column="1"
                                Background="WhiteSmoke" 
                                CornerRadius="10"
                                BorderBrush="#6666FF" 
                                BorderThickness="1"
                                Height="30">
                            <ComboBox x:Name="ObraComboBox"
                                      Background="Transparent"
                                      BorderBrush="Transparent"
                                      FontSize="14"
                                      VerticalContentAlignment="Center"
                                      Padding="10"
                                      IsEditable="True"
                                      IsReadOnly="False"/>
                        </Border>

                        <!-- Periodo -->
                        <TextBlock Grid.Row="1" Grid.Column="2"
                               Text="Periodo" FontSize="16"
                               VerticalAlignment="Center"
                               Margin="20,0,10,0"/>
                        <StackPanel Grid.Row="1" Grid.Column="3"
                                Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Background="#6666FF" CornerRadius="5"
                                Width="80" Height="30" Margin="0,0,5,0">
                                <TextBlock Text="Fecha 1"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="al" VerticalAlignment="Center" Margin="5,0"/>
                            <Border Background="#6666FF" CornerRadius="5"
                                Width="80" Height="30" Margin="5,0,0,0">
                                <TextBlock Text="Fecha 2"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <!-- Combos Mes + Año (ambos dentro de un StackPanel) -->
                        <StackPanel Grid.Row="1" Grid.Column="4"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0">
                            <!-- Combo Mes -->
                            <TextBlock Text="Mes"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <Border Background="White"
                                    CornerRadius="5"
                                    BorderBrush="#6666FF"
                                    Width="150"
                                    Height="30"
                                    BorderThickness="2"
                                    Padding="1"
                                    Margin="0,0,15,0">
                                <ComboBox x:Name="ComBoxMes"
                                          Background="White"
                                          BorderBrush="Transparent"
                                          BorderThickness="0"
                                          FontSize="14"                             
                                          Foreground="DarkBlue"
                                          FontWeight="Normal"
                                          HorizontalContentAlignment="Center"
                                          VerticalContentAlignment="Center"
                                          DropDownOpened="ComBoxMes_DropDownOpened"
                                          SelectionChanged="ComBoxMes_SelectionChanged"/>
                            </Border>

                            <!-- Combo Año -->
                            <TextBlock Text="Año"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <Border Background="White"
                                    CornerRadius="5"
                                    BorderBrush="#6666FF"
                                    Width="150"
                                    Height="30"
                                    BorderThickness="2"
                                    Padding="1"
                                    Margin="0,0,15,0">
                                <ComboBox x:Name="ComBoxAnio"
                                          Background="White"
                                          BorderBrush="Transparent"
                                          BorderThickness="0"
                                          FontSize="14"
                                          Foreground="DarkBlue"
                                          FontWeight="Normal"
                                          HorizontalContentAlignment="Center"
                                          VerticalContentAlignment="Center"
                                          DropDownOpened="ComBoxAnio_DropDownOpened"
                                          SelectionChanged="ComBoxAnio_SelectionChanged"/>
                            </Border>
                        </StackPanel>


                        <!-- Botón Huella -->
                        <Button Grid.Row="2"
                                Grid.Column="4"
                                HorizontalAlignment="Center"
                                Margin="0,20,0,0"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="btnHuellaR_Click">
                            <StackPanel>
                                <Image Source="/Images/huella-dactilar.png"
                                       Width="70"
                                       Height="70"
                                       HorizontalAlignment="Stretch"/>
                                <TextBlock x:Name="lblEstadoHuella"
                                           Text="Click para iniciar el escaneo"
                                           Foreground="#5F5FFF"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Ubicación -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Ubicación"
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   Margin="0,20,10,0"/>

                        <Border Grid.Row="2" Grid.Column="1"
                     Background="WhiteSmoke"
                     CornerRadius="10"
                     BorderBrush="#6666FF"
                     BorderThickness="1"
                     Height="30"
                     Margin="0,20,0,0">
                            <Label x:Name="UbicacionLabel"
                        Content="Aquí va la ubicación"
                        Background="Transparent"
                        Padding="5"
                        Foreground="Black"
                        VerticalContentAlignment="Center"/>
                        </Border>
                        
                    </Grid>

                    <!-- DATA GRID -->
                    <Border Grid.Row="2" CornerRadius="20"
                        Background="#E5E5E5" Margin="0,0,0,0">
                        <DataGrid x:Name="dataGridAsistencia"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              Margin="10"
                              HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Binding="{Binding ID}" />
                                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" />
                                <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria}" />
                                <DataGridTextColumn Header="Entrada" Binding="{Binding EntradaL}" />
                                <DataGridTextColumn Header="Salida" Binding="{Binding SalidaL}" />
                                <DataGridTextColumn Header="Entrada" Binding="{Binding EntradaM}" />
                                <DataGridTextColumn Header="Salida" Binding="{Binding SalidaM}" />
                                <DataGridTextColumn Header="Entrada" Binding="{Binding EntradaMI}" />
                                <DataGridTextColumn Header="Salida" Binding="{Binding SalidaMI}" />
                                <DataGridTextColumn Header="Entrada" Binding="{Binding EntradaJ}" />
                                <DataGridTextColumn Header="Salida" Binding="{Binding SalidaJ}" />
                                <DataGridTextColumn Header="Entrada" Binding="{Binding EntradaV}" />
                                <DataGridTextColumn Header="Salida" Binding="{Binding SalidaV}" />
                                <DataGridTextColumn Header="Entrada" Binding="{Binding EntradaS}" />
                                <DataGridTextColumn Header="Salida" Binding="{Binding SalidaS}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
</Page>
